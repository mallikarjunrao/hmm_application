<% @body_id = "signup" %>

    <div class="main">
      <img src="images/heroes/medium/paper_trays.jpg" alt="A gourmet twist on a nostalgic favorite" />

      <div id="details">
        <h3>Sign up for Crave&nbsp;Updates</h3>

		      <form name="form" method="post" target="_blank" action="http://oi.vresp.com?fid=048e6e8feb" >

		  <div class="fields">
		    <p>Required fields are marked with *</p>

		    <div class="field-wrap" style="margin-top: 20px;">
		      <label for="first-name">First Name:<span>*</span></label>
		      <input id="first-name" name="first_name" size="15" class="text-field"/>
		    </div>

		    <div class="field-wrap">
		      <label for="last-name">Last Name:<span>*</span></label>
		      <input id="last-name" name="last_name" size="15" class="text-field"/>
		    </div>

		    <div class="field-wrap">
		      <label for="email-addr">Email Address:<span>*</span></label>
		      <input id="email-addr" name="email_address" size="15" class="text-field"/>
		    </div>

		    <div class="field-wrap">
		      <label for="addr-1">Address (1):</label>
