<body<% if ! @body_id.blank? -%> id="<%= @body_id %>-page"<% end %><% if ! @body_class.blank? -%> class="<%= @body_class %>"<% end %><% if ! @on_load.blank? -%> onload="<%= @on_load %>"<% end %>>
