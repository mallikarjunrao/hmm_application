    <%= @content_for_layout %>

    <div id="daily-flavors">
      <h2><a class='fir open-menu' href='/menu' onclick='return false' title='See today&rsquo;s flavors'>Baked Fresh Daily</a></h2>
      <h4><a class='open-menu' href='/menu' onclick='return false' title='See today&rsquo;s flavors'>See today&rsquo;s flavors &raquo;</a></h4>
  <% cache(:controller => "cupcake", :action => "today") do %>
     <div id="mini-menu">
      <p class="close-menu"><a class="close-menu" href="" onclick="return false" title="Close this Menu">x</a></p>
<% require 'tztime' %>
<% @day = Day.today  -%>   
      <h3><%= @day.title %></h3>
      <p id="see-all"><a href="/menu" title="Complete Menu listings">See all flavors of the week &raquo;</a></p> 

      <ul>      
        
        <!-- standard cupcakes start -->
        <% for cake in @day.cupcakes
                              
                cup_st_date = cake.available_start_date
                cup_en_date = cake.cutoff_date

                #cup_vs_date = cake.visible_start_date
                
                today = TZTime::LocalTime::Builder.new('Central Time (US & Canada)').now.strftime("%Y-%m-%d").to_date

                showcupcake = false

                if (cup_en_date == nil && cup_st_date == nil)
                  showcupcake = true
                elsif (cup_en_date == nil && cup_st_date != nil && cup_st_date <= today )
                  showcupcake = true
                elsif (cup_en_date != nil && cup_st_date == nil && cup_en_date >= today )
                  showcupcake = true
                elsif (cup_en_date != nil && cup_st_date != nil && cup_en_date >= today && cup_st_date <= today )
                  showcupcake = true
                end

                if showcupcake              
               %>
                    <li><%= '<strong>Breakfast:</strong> ' if cake.is_breakfast %><a href="/cupcake/<%= cake.slug %>"><%= cake.title %></a></li>
                  <% end %>
      <% end  %>
       <!-- standard cupcakes end -->
       <li>&nbsp;</li>
        <!-- mini cupcakes start -->
        <% 
m_c = 0
for cake in @day.mini_cupcakes

   today = TZTime::LocalTime::Builder.new('Central Time (US & Canada)').now.strftime("%Y-%m-%d").to_date

   cup_st_date = cake.available_start_date
   cup_en_date = cake.cutoff_date
   cup_vs_date = cake.visible_start_date
   showcake = false

   if (cup_en_date == nil && cup_vs_date == nil)
    showcake = true
  elsif (cup_en_date == nil && cup_vs_date != nil && cup_vs_date <= today)
    showcake = true
  elsif (cup_en_date != nil && cup_vs_date == nil && cup_en_date >= today )
    showcake = true
  elsif (cup_en_date != nil && cup_vs_date != nil && cup_en_date >= today &&  cup_vs_date <= today )
    showcake = true
  end

  if (showcake) 
      m_c = m_c + 1
  end
end

if m_c != 0 %>
            <li style="line-height: 1.6em;"><strong style="color:#43C3BD; line-height: 1.6em; letter-spacing:0.10em;">Mini cupcakes are only available by preorder</strong></li>
<% end 
        
        for cake in @day.mini_cupcakes

                cup_st_date = cake.available_start_date
                cup_en_date = cake.cutoff_date

                #cup_vs_date = cake.visible_start_date

                today = TZTime::LocalTime::Builder.new('Central Time (US & Canada)').now.strftime("%Y-%m-%d").to_date

                showcupcake = false

                if (cup_en_date == nil && cup_st_date == nil)
                  showcupcake = true
                elsif (cup_en_date == nil && cup_st_date != nil && cup_st_date <= today )
                  showcupcake = true
                elsif (cup_en_date != nil && cup_st_date == nil && cup_en_date >= today )
                  showcupcake = true
                elsif (cup_en_date != nil && cup_st_date != nil && cup_en_date >= today && cup_st_date <= today )
                  showcupcake = true
                end

                if showcupcake
               %>
                    <li style=""><strong style="color:#43C3BD;">Mini:</strong> <a href="/mini_cupcake/<%= cake.slug %>"><%= cake.title %></a></li>
                  <% end %>
      <% end  %>
         <!-- mini cupcakes end -->
       
      </ul>
     </div><!--end: mini menu-->
<% end -%>
    </div>

    <div id="footer">
    <% if @body_id == "home" -%>
      <div id="callout"><%= to_bc( EditableText.display('footer_callout') ) %><a href="http://twitter.com/CRAVEHouston" id="twitter" target="_blank">twitter</a><a href="http://www.facebook.com/pages/Crave-Cupcakes/21695197345" id="facebook" target="_blank">facebook</a></div>
    <% end %>
