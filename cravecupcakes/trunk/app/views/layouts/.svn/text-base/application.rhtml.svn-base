<%		end %>
    <% end %>
<% if session[:user_id] -%>
        <%#*<a href="/login" style="color:#522C1B">Back to Admin</a>%>
<% else %>
<% end %>
      </div>
     <div id="site-nav">
      <ul>
<% if DynoPage.find_by_slug( 'about' ).is_active -%>
        <li id="about"><a href="/about" title="About Our Bakery">About</a></li>
<% end -%>
<% if DynoPage.find_by_slug( 'seasonal' ).is_active -%>
        <li id="promo"><a href="/seasonal" title="Seasonal Promotions">Seasonal</a></li>
<% end -%>
        <li id="menu"><a href="/menu" title="Cupcakes Menu">Menu</a></li>
<% if DynoPage.find_by_slug( 'events' ).is_active -%>
        <li id="weddings-events"><a href="/events" title="Weddings &amp; Events">Weddings &amp; Events</a></li>
<% end -%>
<% if DynoPage.find_by_slug( 'decorations' ).is_active -%>
        <li id="decorations"><a href="/decorations" title="Special Decorations">Special Decorations</a></li>
<% end -%>
