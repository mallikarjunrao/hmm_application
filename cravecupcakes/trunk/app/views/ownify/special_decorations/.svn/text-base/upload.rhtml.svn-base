<% @page_title="Special Decoration Popup Images" -%>
<p><%= link_to 'Back', :controller => "special_decorations", :action => 'list' %></p>

<font color="green"><b><%= (@msg)? @msg + "<br>" : "" %></b></font>
<br>

<%= start_form_tag({:action => 'upload'}, :multipart => true) %>
  <p><label>Original Size Cupcake Special Decorations Image&nbsp;(Image width should be 800px)</label>
  <%= file_field 'upload', 'standard_file' %> 
</p>
  
  <br />
  
  <p><label>Mini Cupcake Special Decorations Image&nbsp; (Image width should be 800px)</label>
  <%= file_field 'upload', 'mini_file' %> </p>
  
  <br>
  <%= submit_tag "Upload" %>
  <br /> <br /> <br />
  
<%= end_form_tag %>
 <div style="float:left; width:auto; margin-right: 20px;">
