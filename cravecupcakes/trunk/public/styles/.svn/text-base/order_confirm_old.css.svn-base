body
{
	margin:auto;
	margin:0;
}

#wrapper {
	margin: 0 auto;
	width: 974px;
	height:auto;
	overflow:hidden;
}

.main_container {
	float:left;
	width:934px;
	padding:0 20px 0px 20px;
}

.main_container_left {
	float:left;
	width:450px;
	height:auto;
	overflow:hidden;
}

.main_container_right {
	float:left;
	margin-left:34px;
	width:450px;
	height:auto;
	overflow:hidden;
}

.legend {
	font-family: "Century Gothic", "News Gothic MT", Helvetica, Arial, Verdana, sans-serif;
	font-size: 17px;
	color:#43C3BD; /* teal */
	margin-left:-4px;
	*margin-left:-9px;
}

.fieldset {
  margin-top: 20px;
  padding: 12px 10px 12px 10px;
  border: 1px solid #d8eee7 !important;
}

.info {
	clear:both;
	float:left;
	width:450px;
}

.order_info {
	padding: 10px;
}

th,td,span {
	font-family: Tahoma, "Century Gothic";
	font-size:12px;
	color:#806449;
}

.order_content {
	float:left;
	*margin-top:10px;
	width:425px;
	height:auto;
	overflow:hidden;
	font-family: Tahoma, "Century Gothic";
	font-size:12px;
	line-height:22px;
	color:#806449; /* chocolate */
}

.order_content_bold {
	font-weight:bold;
	line-height:22px;
}

.order_content_bold_small {
	font-weight:bold;
	font-size:11px;
}

.order_content_seperater {
	clear:both;
	margin:auto;
	padding-top:10px;
	padding-bottom:10px;
	width:410px;
	height:6px;
}

.btn_bar {
	clear:both;
	float:left;
	width:934px;
	height:auto;
	overflow:hidden;
	margin-top:30px;
	padding-bottom:50px;
}

.btn_submit {
	float:right;
	width:173px;
	height:38px;
}

.btn_edit {
	float:right;
	margin-right:30px;
	width:143px;
	height:38px;
}