
div#calendar{
	border:1px solid #AAAAAA;
	background-color:#FFFFFF;
	position:absolute;
	top:100px;
	left:200px;
	display:none;
	z-index:2;
	*width:250px;
}

div#calendar_controllers{
	margin:0px;
	text-align:center;
}

div.cal_head_row{
	margin:0px;
}

div.cal_head{
	background-color:#FFFFFF;
	border:none;
	width:35px;
	height:20px;
	margin-top:5px;
	float:left;
	margin:0px;
	text-align:center;
	font-size:8pt;
}

div.cal_date_empty{
	width:35px;
	height:25px;
	float:left;
	margin:0px;
	border:none;
	background-color:#FFFFFF;
}

div.cal_date{
	width:35px;
	height:25px;
	float:left;
	margin:0px;
	border:none;
	background-color:#FFFFFF;
	text-align:center;
	font-size:10pt;
	cursor:pointer;
}

div#calendar_controllers select{
	border:none;
	background-color:#FFFFFF;
}
div#calendar_controllers input.ctrl_button{
	width:25px;
	height:22px;
	padding:0px;
	background-color:#DDDDDD;
}
div#calendar_controllers input.close_button{
	width:20px;
	height:16px;
	padding:0px;
	line-height:20px;
	margin-right:5px;
	background-color:#DDDDDD;
	float:right;
}

div.current_date{
	/*border:1px solid #DDAAAA;*/
	color:#FF4444;
	font-weight:bold;
	/*background-color:#DDCCCC;*/
}

div.cal_content{
	clear:both;

}
