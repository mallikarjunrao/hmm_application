    </style>
  </head>

  <body>
    <table width="880" border="0" cellspacing="0" cellpadding="0" style="border:#cc6600 solid 1px; background-color: #ffffff">
      <tr>
        <td width="246"><img src="http://www.holdmymemories.com/images/hmm_logo_whitebg.jpg" width="246" height="71" /></td>
        <td width="388" align="center"><h1>Gift Certificate</h1>
          <strong>Certificate Number:</strong>   <%=@certificate_info.certificate_id%><%if @certificate_info.certificate_name!=''%><br />
            <strong>Certificate Name:</strong>   <%=@certificate_info.certificate_name%><%end%></td>
        <td width="246" align="right"><img src="<%=@studio.img_url%>/user_content/studio_top_logos/<%=@studio.studio_top_logo%>_black.png" height="71" /></td>
      </tr>
      <tr>
        <td height="1" colspan="3" bgcolor="#CCCCCC"></td>
      </tr>
      <tr>
        <td colspan="3" style="padding:50px;">
          <table width="100%" border="0" cellspacing="0" cellpadding="0" id="content">
            <tr>
              <td width="29%" align="right" valign="top" style="padding-right:30px;"><strong>This certificate is valid for : </strong></td>
              <td width="71%"><%for certificate_des in @certificate_desc%>
                  <%=certificate_des.description%>
                  <br />
                <%end%>
                <%if @certificate_info.membership_option=="yes"%>
                  <%if @cert_info.membership_fee.to_f > 0%>
                 <% membership_terms=MembershipTerm.find(:first,:conditions=>"id=#{@certificate_info.membership_term_id}")%>
                    <%=membership_terms.full_text%>
                    <br />
                  <%end%>
                <%end%>
              </td>
            </tr>
            <tr>
              <td height="25" colspan="2" valign="top">&nbsp;</td>
            </tr>
            <tr>
              <td width="29%" valign="top">&nbsp;</td>
              <td class="smaltxt"><em><%=@certificate_info.disclaimer_notes%></em></td>
            </tr>
            <tr>
              <td height="25" colspan="2" valign="top">&nbsp;</td>
            </tr>
            <tr>
              <td align="right" valign="top" style="padding-right:30px;"><strong>This certificate is valid at the following locations :</strong></td>
              <td><table border="0"> <% for studios in @other_studios %>
                    <tr>
                      <td>&nbsp;</td>
                      <td valign="top"><b><%=studios.studio_name%></b></td>
                    </tr>
                    <tr>
                      <td>&nbsp;</td>
                      <td>Studio Phone : <%=studios.studio_phone%></td>
                    </tr>
                    <tr>
                      <td>&nbsp;</td>
                      <td>&nbsp;</td>
                    </tr>
                  <%end%></table></td>
            </tr>
            <tr>
              <td valign="top" colspan="2" height="30"></td>
            </tr>
            <tr>
              <td align="right" valign="top" style="padding-right:30px;"><strong>Payment Received From:</strong></td>
              <td valign="top"><%=@cert_info.first_name%>&nbsp;<%=@cert_info.last_name%></td>
            </tr>
            <tr>
              <td align="right" valign="top" style="padding-right:30px;"><strong>Order Number:</strong></td>
              <td valign="top"><%=@cert_info.order_no%></td>
            </tr>
            <tr>
              <td align="right" valign="top" style="padding-right:30px;"><strong>Amount:</strong></td>
              <td valign="top">$<%=number_with_precision(Float(@cert_info.amount).round(2), :precision => 2)%></td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>