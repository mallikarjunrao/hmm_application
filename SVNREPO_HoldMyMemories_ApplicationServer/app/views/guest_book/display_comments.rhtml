                                  imageName  = gal.v_gallery_image
                                  imageName.slice!(-3..-1)
                                  imgpath="#{gal.img_url}/user_content/photos/icon_thumbnails/"+imageName+"png"
                                end
                                path="/galleries/gallery_fisheye/#{gal.id}"

                                gal_name=''
                                if @i.e_approval=="approve"
