                                  rejectpath="/gallery_comment/reject_cmt/#{@i.id}"
                                else
                                  deletepath="/gallery_comment/destroy_cmt/#{@i.id}"
                                end
                                table="gallery_comments"

                              %>
                              <%else%>
                                <% if (@i.ctype=='moment') %>
