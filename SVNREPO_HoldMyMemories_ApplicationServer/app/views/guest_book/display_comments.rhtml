<%= javascript_include_tag 'themes/prototype' %>
<div id="content" align="center">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td width="13" align="left" valign="top"></td>
      <td width="944" align="left" valign="top"><table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td height="10" align="left" valign="top"></td>
          </tr>
          <tr>
            <td height="35" align="left" valign="bottom" class="header-page"><div style="float:right;display:inline;"><input name="button" type="submit" class="cmd-btn" id="button" value="Add New Comment" onClick="window.location='/guest_book/new_comment/<%=params[:id]%>'" /></div>Guest Book</td>
          </tr>
          <tr>
            <td height="10" align="left" valign="top"></td>
          </tr>
          <tr>
            <td height="1" align="left" valign="top" bgcolor="#454545"></td>
          </tr>
          <tr>
            <td height="10" align="left" valign="top"></td>
          </tr>
          <% if params[:success] %>
            <tr>
              <td height="35" align="center" valign="bottom" class="content"><%if params[:success] == "1"%>New Comment Added Sucessfully.<%end%></td>
            </tr>
          <% end %>
          <tr>
            <td height="10" align="left" valign="top"></td>
          </tr>
           <%if @total==0 %>
            <tr>
              <td width="100%" height="300" align="center" valign="top" class="error-message">
                No comments found.
              </td></tr>
          <%else%>
          <tr>
            <td height="10" align="right" valign="top" class="side-heading">
              <%  unless @total==0 %>
                <table class="side-heading" width="656" align="right" border="0"><tr><td align="right"  >
                      <%if @page==0 %>
                        <% if @nonext==1%>
                        <%else%>
                          <%= link_to_remote("Next >> ",
                            :update => 'content', :url => { :controller => :guest_book, :action =>:display_comments, :page => @nextpage} ) %>
                        <%end%>
                      <%else%>
                        <%= link_to_remote("  << Previous ",
                          :update => 'content', :url => { :controller => :guest_book, :action =>:display_comments, :page => @previouspage} ) %>
                        &nbsp;&nbsp;&nbsp;
                        <% if @nonext==1%>
                        <%else%>
                          <%= link_to_remote(" Next >> ",
                            :update => 'content', :url => { :controller => :guest_book, :action =>:display_comments, :page => @nextpage} ) %>
                        <%end%>
                      <%end%>&nbsp;&nbsp;&nbsp; (Pages <%= @page+1 %> of <%=@numberofpages+1%>)
                    </td></tr></table>
              <%end%>
            </td>
          </tr>
          <tr>
            <td height="10" align="left" valign="top"></td>
          </tr>
            <tr>
              <td align="left" valign="top"><table width="100%" border="0" cellspacing="0" cellpadding="0">
                  <tr>
                    <td width="100%" height="300" align="left" valign="top"><table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <%@id1=0

                        for @i in @tagid

                          @id1=@id1+1
                          @id="#{@id1}"
                          comment=@i.comment
                          approvepath=""
                          rejectpath=""
                          replypath=""
                        %>


                          <% if (@i.ctype=='chapter') %>
                            <%
                            tag=Tag.find(@i.master_id)
                            type1="Chapter"
                            status=tag.status
                            name=tag.v_tagname
                            uid=tag.uid
                            @i.ctype="Chapter"
                            flag = 0
                            hmmuser=HmmUser.find(@i.user_id)
                            username=hmmuser.v_fname+" "+hmmuser.v_lname

                            e_access=tag.e_access
                            if(tag.v_chapimage == "folder_img.png")
                              imgpath='/user_content/photos/icon_thumbnails/folder_img.png'
                            else
                              imageName  = tag.v_chapimage
                              imageName.slice!(-3..-1)
                              imgpath="#{tag.img_url}/user_content/photos/icon_thumbnails/"+imageName+"png"
                            end

                            path="/tags/subchap_coverflow/#{tag.id}"
                            tag_name=''
                            sub_name=''
                            gal_name=''
