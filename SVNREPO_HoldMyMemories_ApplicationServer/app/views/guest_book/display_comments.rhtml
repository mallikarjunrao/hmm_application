                                      <tr>
                                        <td align="left" valign="top"></td>
                                        <td height="30" align="left" valign="top" class="header-paragraph"><%=name%></td>
                                      </tr>
                                      <tr>
                                        <td align="left" valign="top"></td>
                                        <td align="left" valign="top" class="content">
                                          <% if(@i.ctype=='message_boards') %>
                                            <%=h @i.message.gsub("\n", "<br />\n") %>
                                          <%else%>
                                            <%=h @i.comment.gsub("\n", "<br />\n") %>
                                          <%end%>
                                        </td>
                                      </tr>
                                    </table></td>
                                  <td width="16" align="left" valign="top"></td>
                                </tr>
                                <tr>
                                  <td height="10" colspan="5" align="left" valign="top"></td>
                                </tr>
                              </table></td>
                          </tr>
                          <tr>
                            <td>&nbsp;</td>
                          </tr>
                        <%end%>
                        <tr>
                          <td>
                            <%  unless @total==0 %>
                              <table class="side-heading" width="656" align="right" border="0"><tr><td align="right"  >
                                    <%if @page==0 %>
                                      <% if @nonext==1%>
                                      <%else%>
                                        <%= link_to_remote("Next >> ",
                                          :update => 'content', :url => { :controller => :guest_book, :action =>:display_comments, :page => @nextpage} ) %>
                                      <%end%>
                                    <%else%>
                                      <%= link_to_remote("  << Previous ",
                                        :update => 'content', :url => { :controller => :guest_book, :action =>:display_comments, :page => @previouspage} ) %>
                                      &nbsp;&nbsp;&nbsp;
                                      <% if @nonext==1%>
                                      <%else%>
                                        <%= link_to_remote(" Next >> ",
                                          :update => 'content', :url => { :controller => :guest_book, :action =>:display_comments, :page => @nextpage} ) %>
                                      <%end%>
                                    <%end%>&nbsp;&nbsp;&nbsp; (Pages <%= @page+1 %> of <%=@numberofpages+1%>)
                                  </td></tr></table>
                          </td>
                        </tr>
                        <tr>
                          <td>&nbsp;</td>
                        </tr>
                      </table></td>
                  </tr>
                </table></td>
            </tr>
          <%end%><%end%>
        </table></td>
      <td width="13" align="left" valign="top"></td>
    </tr>
  </table>
</div>
