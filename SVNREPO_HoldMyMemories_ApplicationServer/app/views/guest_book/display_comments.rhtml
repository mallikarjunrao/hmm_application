                                  name=photo.v_tagphoto
                                  uid=photo.uid
                                  e_access=photo.e_access
                                  tag=Tag.find(photo.tagid)
                                  type1="Chapter"
                                  flag = 0
                                  tag_status=tag.status
                                  tag_name=tag.v_tagname
