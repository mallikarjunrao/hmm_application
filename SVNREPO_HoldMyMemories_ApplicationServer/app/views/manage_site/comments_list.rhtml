          <th align="left" valign="top" scope="col"> <span class="style1"> <%if @i.ctype!='text'%>Text Blog Entry<%else%> <%if  @i.ctype!='message boards'%><%if tag_name!='' %><%=tag_name%> >> <%end%><%if sub_name!='' %><%=sub_name%> >> <%end%> <%if gal_name!='' %><%=gal_name%> >> <%end%></span><a href="<%=path%>" style="text-decoration:none"><%=name%></a><%else%><font color="#ffffff"><%=name%></font><%end%><%end%></th>
