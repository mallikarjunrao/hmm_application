      <table class="border" width="700" align="center" height="300">
        <tr>
          <td align="center" class="text-journal">
                                          No comments found.
          </td>
        </tr>
      </table>
    <%else%>
      <table class="border" width="100%" align="right"><tr><td align="right" >

