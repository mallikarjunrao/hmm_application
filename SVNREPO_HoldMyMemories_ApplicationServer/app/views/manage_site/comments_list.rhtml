              &nbsp;&nbsp;&nbsp;
              <% if @nonext==1%>
              <%else%>
                <%= link_to_remote("<span class='comment'> Next >> </span>",
                  :update => 'content1', :url => { :controller => :manage_site, :action => :comments_list, :page => @nextpage} ) %>
              <%end%>

            <%end%>&nbsp;&nbsp;&nbsp; <span class='comment'>(Pages <%= @page+1 %> of <%=@numberofpages+1%>) </span>

          </td></tr></table>
    <%end%>
    </td>
    </tr>
  </table>
