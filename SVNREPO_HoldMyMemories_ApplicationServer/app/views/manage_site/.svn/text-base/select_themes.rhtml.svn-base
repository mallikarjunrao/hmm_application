<script type="text/javascript">
  function check_theme(id){
    var ids = id;
    var cnt = document.getElementById('total_themes').value;
    for (j = 0; j < cnt; j++) {
      if (eval("document.select_theme.ckbox[" + j + "].checked") == true) {
        document.select_theme.ckbox[j].checked = false;
        if (j == ids) {
          document.select_theme.ckbox[j].checked = true;
        }
      }
    }


  }
</script>
