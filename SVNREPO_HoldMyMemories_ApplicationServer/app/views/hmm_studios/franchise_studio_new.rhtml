
<script language="JavaScript">
	function check(){
		if (document.getElementById('hmm_studio_studio_branch').value == '')
		{
			document.getElementById('hmm_studio_studio_branch').focus();
            alert("Please enter Studio Name");
            return false;
		}

		if  (document.getElementById('hmm_studio_studio_address').value == '')
		{
			document.getElementById('hmm_studio_studio_address').focus();
            alert("Please enter Studio Address");
            return false;
		}
		
	}

</script>

<h1>Add Studio </h1>
<form action="/hmm_studios/franchise_studio_create" method="post" onsubmit="return check();">

  <%= error_messages_for 'hmm_studio' %>


<table>
	<tr>
		<td colspan="3">&nbsp;</td>
	</tr>
	<tr>
		<td align="right" >
			<label for="hmm_studio_studio_branch">Studio branch</label>
		</td>
		<td>&nbsp;</td>
		<td align="left">
			<%= text_field 'hmm_studio', 'studio_branch', :class => "textbox-signup" %>

			<%= observe_field :'hmm_studio_studio_branch',
                        :with       => "studio_branch",
                        :frequency  => 0.25,
                        :url        => {:action => :validate },
                        :update     => :message
                      %>
					   <span id="message"></span>

		</td>
	</tr>

	<tr>
		<td colspan="3">&nbsp;</td>
	</tr>

	<tr>
		<td align="right" valign="top">
			<label for="hmm_studio_studio_branch">Studio address</label>
		</td>
		<td>&nbsp;</td>
		<td align="left">
			<%= text_area 'hmm_studio', 'studio_address', :rows =>"9", :cols=>"40",  :class => "textbox-1"   %>
		</td>
	</tr>

	<tr>
		<td colspan="3">&nbsp;</td>
	</tr>

	
</table>
  <center> <%= submit_tag "Create" %></center>
</form>

