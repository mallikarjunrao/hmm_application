<h1>Listing gallery_comments</h1>

<table>
  <tr>
  <% for column in GalleryComment.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for gallery_comment in @gallery_comments %>
  <tr>
  <% for column in GalleryComment.content_columns %>
    <td><%=h gallery_comment.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => gallery_comment %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => gallery_comment %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => gallery_comment }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @gallery_comment_pages.current.previous } if @gallery_comment_pages.current.previous %>
<%= link_to 'Next page', { :page => @gallery_comment_pages.current.next } if @gallery_comment_pages.current.next %> 

<br />

<%= link_to 'New gallery_comment', :action => 'new' %>
