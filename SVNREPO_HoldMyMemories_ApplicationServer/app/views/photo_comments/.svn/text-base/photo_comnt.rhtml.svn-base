<style type="text/css">
<!--
.style1 {
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
	font-size: 12px;
	color:#914511;
}
.style3 {font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 18px; }
-->
</style>




<%if @total==0%>
<font color='#fdf1ca' >There are no Comments for This Moment!!</font>

<br>
<font color="#f5dfa6"><%=  flash[:notice_pcc]%></font>
					<font color="#f5dfa6"><%=  flash[:notice_pca]%></font>
					<font color="#f5dfa6"><%=  flash[:notice_pcr]%></font>
					<font color="#f5dfa6"><%=  flash[:notice_pcd]%></font><br>
<%else%>
<br>
<font color="#f5dfa6"><%=  flash[:notice_pcc]%></font>
					<font color="#f5dfa6"><%=  flash[:notice_pca]%></font>
					<font color="#f5dfa6"><%=  flash[:notice_pcr]%></font>
					<font color="#f5dfa6"><%=  flash[:notice_pcd]%></font>
					<font color="#f5dfa6"><%= flash[:notice_acceptcmt]%></font>
					<font color="#f5dfa6"><%= flash[:notice_rejectcmt]%></font>
					<font color="#f5dfa6"><%= flash[:notice_smtdestroy]%></font>
					<br>
<table width="100%" border="1" bordercolor="#191919" align="center" cellspacing="0" cellpadding="3">
    <tr bordercolor="#000000">
      <th align="left" valign="middle" colspan="3" bgcolor="#191919" scope="col" ><span class="btmtxt">Comments for <% if params[:id_journal]=='0'%> moments <%else%> Journal <%end%></th>
    </tr>
	
	<%
for m in @photo_comment %>
	
	<% if(m.ctype=='sharemoment_comment') %>
				<% params[:id]=m.master_id
					
					if m.e_approval=="pending" 
			 			approvepath="/share_momentcomments/approve_cmt/#{m.id}"
			 			rejectpath="/share_momentcomments/reject_cmt/#{m.id}"
					else
						deletepath="/share_momentcomments/destroy_cmt/#{m.id}"

					end 
					table="share_momentcomments"
					
%>
			<%else%>
				<% params[:id]=m.master_id
					
					if m.e_approval=="pending" 
			 			approvepath="/share_comments/approve_cmt/#{m.id}"
			 			rejectpath="/share_comments/reject_cmt/#{m.id}"
					else
						deletepath="/share_comments/destroy_cmt/#{m.id}"
					end 
					table="share_comments"
					
%>

		
					<%end%>
		

	<tr bordercolor="#000000"> 
      <th width="6%" height="6" align="left" valign="top" scope="col">&nbsp;</th>
      <th width="19%" align="left" valign="top" class="text-journal" scope="col"><span class="style1">Commented By&nbsp;</span></th>
      <th width="75%" align="left" valign="top" scope="col"><span class="text-journal"><%= m.name %></span></th>
  </tr>
	
	
	<tr bordercolor="#000000">
      <th height="6" align="left" valign="top" scope="col">&nbsp;</th>
      <th align="left" valign="top" class="text-journal" scope="col"><span class="style1">Comment</span></th>
      <th align="left" valign="top" scope="col"><span class="text-journal"><%= m.comment.gsub("\n", "<br />\n") %></span></th>
    </tr>
	
	<% if m.reply == nil || m.reply==''%>
	<%else%>
	<tr bordercolor="#000000">
      <th height="6" align="left" valign="top" scope="col">&nbsp;</th>
      <th align="left" valign="top" class="text-journal" scope="col"><span class="style1">Reply</span></th>
      <th align="left" valign="top" scope="col"><span class="text-journal"><%= m.reply %></span></th>
    </tr>
	<%end%>
    <tr bordercolor="#000000">
      
			
			<th colspan="3" align="left" valign="middle" bgcolor="#191919" class="text-journal" scope="col">
       		
			<% if session[:friend]!='' %> &nbsp;
<%			else
%>
			
			<% if m.e_approval=="pending" %>
			<%if table=="share_momentcomments" %>
				<%= link_to_remote("Approve",
				:update => @update, :url => { :controller => :share_momentcomments,  :action =>:approve_cmt, :page1 => @page, :cid => m.id, :id_journal => @id_journal, :id => @id}  ) %>
				&nbsp;&nbsp;&nbsp;
				<%= link_to_remote("Reject",
				:update => @update, :url => { :controller => :share_momentcomments,  :action =>:reject_cmt, :page1 => @page, :cid => m.id, :id_journal => @id_journal, :id => @id}  ) %>
			<%else%>
			 <%= link_to_remote("Approve",
				:update => @update, :url => { :controller => :photo_comments,  :action =>:add_comment, :page1 => @page, :cid => m.id, :id_journal => @id_journal, :id => @id}  ) %>
	
			
			&nbsp;&nbsp;&nbsp; <%= link_to_remote("Reject",
				:update => @update, :url => { :controller => :photo_comments,  :action =>:reject_comment, :page1 => @page, :cid => m.id, :id_journal => @id_journal, :id => @id}  ) %>
			<%end%>
			<%else%>
			<%if table=="share_momentcomments" %>
			 
					<a href="#" onclick="if(confirm('Are you sure you want to delete this comment?')){new Ajax.Updater('me', '/share_momentcomments/destroy_cmt/<%=@id%>?id_journal=<%=@id_journal%>&amp;cid=<%=m.id%>&amp;page1=<%=@page%>', {asynchronous:true, evalScripts:true}); return false;}else return false">Delete</a>
			
			&nbsp;&nbsp;&nbsp;
			 <%= link_to_remote("Reply",
			:update => m.id, :url => { :controller => :chapter_comment,  :action =>:reply_comnt, :page => params[:page], :tag_id => @id, :cid => m.id, :id => @id, :table => 'share_momentcomments'}  ) %>
					
			<%else%>
					<a href="#" onclick="if(confirm('Are you sure you want to delete this comment?')){new Ajax.Updater('me', '/photo_comments/comt_destroy/<%=@id%>?id_journal=<%=@id_journal%>&amp;cid=<%=m.id%>&amp;page1=<%=@page%>', {asynchronous:true, evalScripts:true}); return false;}else return false">Delete</a>
			
			&nbsp;&nbsp;&nbsp;
			 <%= link_to_remote("Reply",
			:update => m.id, :url => { :controller => :chapter_comment,  :action =>:reply_comnt, :page => params[:page], :tag_id => @id, :cid => m.id, :id => @id, :table => 'photo_comments'}  ) %>
			<% end %>
			<% end %>
			<% end %>	 <br><br>
			<div id=<%=m.id%>></div>
			  </th>
    </tr>
	<%end%>
		
</table>

<table class="border"  width="100%" align="center"><tr><td align="right" >
		  	
			<%if @page==0 %>
			
			<% if @nonext==1 || @total<=3%>
			<%else%>
			<%= link_to_remote("Next >> ",
				:update => @update, :url => {  :action =>:photo_comnt, :page1 => @nextpage, :id_journal => @id_journal, :id => @id} ) %>
			<%end%>
			<%else%>
			
			<%= link_to_remote("  << Previous ",
				:update => @update, :url => {  :action =>:photo_comnt, :page1 => @previouspage, :id_journal => @id_journal, :id => @id } ) %>
			&nbsp;&nbsp;&nbsp; 
			<% if @nonext==1 || @total<=3%>
			<%else%>
			<%= link_to_remote("Next >> ",
				:update => @update, :url => {  :action =>:photo_comnt, :page1 => @nextpage, :id_journal => @id_journal, :id => @id } ) %>
			<%end%>
			
			<%end%>&nbsp;&nbsp;&nbsp; (Pages <%= @page+1 %> of <%=@numberofpages+1%>) 
			
			</td></tr></table>
<%end%>