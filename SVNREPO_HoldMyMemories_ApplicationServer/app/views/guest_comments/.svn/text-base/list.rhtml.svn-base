<h1>Listing guest_comments</h1>

<table>
  <tr>
  <% for column in GuestComment.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for guest_comment in @guest_comments %>
  <tr>
  <% for column in GuestComment.content_columns %>
    <td><%=h guest_comment.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => guest_comment %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => guest_comment %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => guest_comment }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @guest_comment_pages.current.previous } if @guest_comment_pages.current.previous %>
<%= link_to 'Next page', { :page => @guest_comment_pages.current.next } if @guest_comment_pages.current.next %> 

<br />

<%= link_to 'New guest_comment', :action => 'new' %>
