<%= start_form_tag({:action=> "search_country"}, { :onSubmit => "Element.show('spinnerr.gif');" }) %>

<table border=0 width="600" align="top">
<tr>
	<td width=120 align="bottom"><label for="searchtext"><font size="1"><h3>Live Search By:</h3></font></label></td>
	<td width=120>&nbsp;</td>
	<td>&nbsp;</td>	
</tr>

<tr>
	
	<td valign="middle" width=120><h5> Country </h5></td>
	<td valign="bottom" width=120 ><%= text_field_tag :searchtext %>&nbsp;&nbsp;</td></br></br></br>
	<td  valign="right"><img alt="spinnerr.gif" id="spinnerr.gif" src="/images/spinnerr.gif" style="display:none;" height="20" width="20" /></td>
	
</tr>



</table>

<%= end_form_tag%>

<%= observe_field(:searchtext,
				  :frequency => 0.05,
                  :update => :search_hits,
                  :loading => "Element.show('spinnerr.gif')",
                  :complete => "Element.hide('spinnerr.gif')",
				  :url => { :action => :live_search_country})%>
				  

				  
<div id="search_hits"></div>