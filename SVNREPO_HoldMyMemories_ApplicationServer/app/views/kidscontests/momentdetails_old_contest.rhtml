<style type = "text/css">
.text3{
	font-family:Arial, Helvetica, sans-serif;
	font-size:12px;
	font-weight:normal;
	color:#ffffff;
}	
</style>

<table width="100%" align="center">
	<tr><td>&nbsp;</td></tr>
	<tr>
		<td  align="center" ><!--<img src="/images/cutekids.png" border="0"/>--></td>
	</tr>
	<tr><td>&nbsp;</td></tr>
	

	<tr>
		<th align="center">
			<img src="<%=@moment_details[0].img_url%>/user_content/photos/journal_thumb/<%=@moment_details[0].v_filename%>" border="0">
		</th>
	</tr>
	<tr><th>&nbsp;</th></tr>
	
	<tr>
		<td align="center" class="text3" >
			<%=@contests_fname[0].first_name %>
		</td>
	</tr>
        
        
							  
							                          
       <tr><th>&nbsp;</th></tr>
       <%for @j in @journal %>
	<tr>
		<th align="center" valign="middle" scope="col"><span class="heading-journal">
			
			<table width="600" class="border">
				
				<tr>
					<th align="left" bgcolor="#191919" colspan="2">
						<font size="3" color="#FFFFFF"> Journal</font>
					</th>
				</tr>
				<tr><th colspan="2">&nbsp;</th></tr>	
				<tr>
					<th>&nbsp;&nbsp;</th>
					<th align="left" class="text3">
							 
							 <%= @j.title %> -
					  				<% ActiveSupport::CoreExtensions::Time::Conversions::DATE_FORMATS.merge!(
    									:date => "%Y-%m-%d",
    									:presentable_datetime => "%a %b %d, %Y %H:%M",
    									:presentable_date => "%a %b %d, %Y") 
										@created_date=@j.added_date%>  
					   				<%= @created_date.to_s(:presentable_date) %></span>
					</th>
				</tr>
				<tr><th colspan="2">&nbsp;</th></tr>		
				<tr class="text3">
					<th>&nbsp;&nbsp;</th>
					<th align="left">
						<%=@j.description.gsub("\n", "<br />\n") %>
					</th>
				</tr>
				<tr><th>&nbsp;</th></tr>
				<tr><th>&nbsp;</th></tr>
			</table>
		</th>
	</tr>
	<tr>
		<th>&nbsp;
			
		</th>
	</tr>
	
	<%end%>
</table>