<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
  <head>
    <style>
      body{background:#111;color:#fff;font:0.8em "Lucida Grande","Lucida Sans Unicode",Tahoma,Verdana,sans-serif; font-weight:normal}
      a{color:#ddd;outline:none;text-decoration:none}
      a:hover{color:#fff;}
      #demo {width:100%;height:100%;	margin:0 auto}
    </style>
    <script type="text/javascript" src="/javascripts/mooflow/mootools-beta-1.2b2.js"></script>
    <script type="text/javascript" src="/javascripts/mooflow/MooFlow.js"></script>
    <script type="text/javascript">
      var myMooFlowPage = {

        start: function(){

          var mf = new MooFlow($('MooFlow'), {
            stylePath: '/javascripts/mooflow/MooFlow.css',
            useSlider: true,
            useAutoPlay: true,
            useCaption: true,
            useResize: true,
            useWindowResize: true,
            useMouseWheel: true,
            useKeyInput: true,
            startIndex: <%=@user_images.length/2%>
          });
        }

      };

      window.addEvent('domready', myMooFlowPage.start);
    </script>
  </head>
  <body>
    <div id="demo">

      <div id="MooFlow">
        <%if @user_images %>
        <% for user_image in @user_images %>
        <% if user_image.id!=920799 && user_image.id!=920797 && user_image.id!=920798%>
            <div>  <img src="<%=user_image.img_url%>/user_content/photos/coverflow/<%=user_image.v_filename%>" title="<%=user_image.v_filename%>" alt="<%=user_image.v_filename%>"/></div>
          <%end%>
        <%end%>
 <%end%>
      </div>
    </div>
  </body>
</html>