xml.instruct! :xml, :version=>"1.0"
xml.images("swf" => @slideshowmoment[0].swf){
  xml.title("file" => "#{@slideshowmoment[0].img_url}/titleImages/#{@slideshowmoment[0].title}")
  if @slideshowmoment[0].song=="family.mp3" || @slideshowmoment[0].song=="baby.mp3" || @slideshowmoment[0].song=="shine.mp3" || @slideshowmoment[0].song=="danielho.mp3"
    xml.song("file" => "#{@slideshowmoment[0].img_url}/#{@slideshowmoment[0].song}")
  else
    xml.song("file" => "#{@slideshowmoment[0].song}")
  end
  @sharemomentids = SlideshowMomentId.find(:all, :conditions => " slideshow_id=#{@slideshowmoment[0].id}")
  for @slideshowcontent in @sharemomentids
    @moment = UserContent.find(@slideshowcontent. moment_id)
    xml.img("file" => "#{@moment.img_url}/user_content/photos/journal_thumb/#{@moment.v_filename}")
  end
}