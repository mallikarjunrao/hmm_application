                      <a href="/contests/enter_contest?contest_id=<%= contest %>&type=enter&website_type=<%= website_type %>&id=<%=id%>"  onclick="Modalbox.show(this.href, {title:'My Image', width: 400, height:430});return false;"><img src="/images/thatsmybaby/enter-contest.png" width="349" height="65"  border="0"/></a>
                    <% end %>
                  </td>
                </tr>
              <%end%>
              <tr>
