                  <td align="center" valign="top">
                    <% if website_type == "familywebsite" %>
                      <a href="/contests/enter_contest?type=enter&website_type=<%= website_type %>&p=<%=params[:p]%>&id=<%=id%>"  onclick="Modalbox.show(this.href, {title:'My Image', width: 400, height:430});return false;"><img src="/images/thatsmybaby/enter-contest.png" width="349" height="65"  border="0"/></a>
