<script type="text/javascript">
  $(document).ready(function(){
    $(".blog").click(function(){
      if ($(".panel").is(":hidden")) {
        $(".panel").slideDown("slow");
      } else {
        $(".panel").slideUp("slow");
      }
    });

    $(".guest_comm").click(function(){
      if ($(".guest_panel").is(":hidden")) {
        $(".guest_panel").slideDown("slow");
        $(".studioCredit").hide();

      } else {
        $(".guest_panel").slideUp("slow");
      }
    });

    $(".login").click(function(){
      if ($(".login_panel").is(":hidden")) {
        $(".login_panel").slideDown("slow");
      } else {
        $(".login_panel").slideUp("slow");
      }
    });

    $(".close").click(function(){
      $(".panel").slideUp("slow");
    });

    $(".close1").click(function(){
      $(".guest_panel").slideUp("slow");
      $(".studioCredit").show();
    });
    $(".close2").click(function(){
      $(".login_panel").slideUp("slow");
    });

  });
</script>
