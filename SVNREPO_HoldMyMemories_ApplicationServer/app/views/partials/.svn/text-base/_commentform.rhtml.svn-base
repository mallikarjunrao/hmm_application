<% if flash[:notice]

%>
  <table align="center" cellpadding="4" cellspacing="4" >
    <tr ><td height="200" valign="middle" class="content" align="center"><%= flash[:notice] %><br/><br/><br/><a href="#" class="nyroModalClose">( close )</a></td></tr>
  </table>
  <%
  flash[:notice]=''
else %>
  <table  class="boder" align="center" cellpadding="0" cellspacing="0" height="450">
    <tr><td colspan="2"  valign="top" >&nbsp;</td></tr>
    <tr><td colspan="2" class="headers">Add Comment</td></tr>
    <tr><td colspan="2"  valign="top" >&nbsp;</td></tr>
    <tr><td colspan="2" height="1" valign="top" bgcolor="#454545"></td></tr>
    <tr><td colspan="2"  valign="top" >&nbsp;</td></tr>
    <tr align="center">
      <td align="left" valign="top" class="content">Your name:</td>
      <td align="left" valign="top"><%= text_field "#{model}", "#{field1}", :size => "18",  :class => "validate['required']", :id => "comment_name" %></td>
    </tr>
    <tr align="center">
      <td align="left" valign="top" class="content">Your comment:</td><td align="left" valign="top"><%= text_area "#{model}", "#{field2}", :rows =>"10", :cols=>"40",  :class => "validate['required']", :id => "comment_content"  %></td>
    </tr>
    <tr align="left">
      <td align="left" valign="top" class="content">&nbsp;</td>
      <td align="left" valign="top" class="content">
        <%= recaptcha_tags :ajax => true %>  <br/><font color="red"><%=flash[:error]%></font>
      </td>
    </tr>
    <tr>
      <td>&nbsp;</td><td><input type="submit" class="cmd-btn" value="<%= label %>" />
        &nbsp;
        <input type="button" class="nyroModalClose" id="cmd-btn" value="Cancel" /></td>
    </tr>
  </table>
<% end %>
<script type="text/javascript">


  $j('#commentform').submit(function(e) {
    if(document.getElementById('comment_name').value=='')
    {
      alert('Please enter your name!');
      document.getElementById('comment_name').focus();
      e.preventDefault();
      return false;
    }else if(document.getElementById('comment_content').value=='')
    {
      alert('Please enter your comment!');
      document.getElementById('comment_content').focus();
      e.preventDefault();
      return false;
    }else if(document.getElementById('recaptcha_response_field').value=='')
    {
      alert('Please enter the code!');
      document.getElementById('recaptcha_response_field').focus();
      e.preventDefault();
      return false;
    }
    return true;
  });


  function close_modal()
  {
    $.nyroModalRemove();
    //window.location.reload();
  }

</script>
