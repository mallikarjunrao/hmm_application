<head>
  <%#*<link href="/jquery.selectbox-0.1.3/css/jquery.selectbox.css" rel="stylesheet" type="text/css" />%>
  <style type="text/stylesheets">
    
  </style>
  <script type="text/javascript" src="/jquery.selectbox-0.1.3/js/jquery-1.5.1.min.js"></script>
  <script type="text/javascript" src="/jquery.selectbox-0.1.3/js/jquery.selectbox-0.1.3.js"></script>
  <script type="text/javascript">
    var comboopenflag;
    function init() {
      var combo = document.getElementById('radius').value = "";
      comboopenflag = "off";
    }
    function showOptions() {
      if (comboopenflag != "on") {
        document.getElementById('combodiv').style.display = "block";
        comboopenflag = "on";
      } else if (comboopenflag == "on") {
        document.getElementById('combodiv').style.display = "none";
        comboopenflag = "off";
      }
    }

    function setOption(selection) {

      var combo = document.getElementById('radius').value = selection;
      document.getElementById('combodiv').style.display = "none";
      comboopenflag = "off";
    }


    function handleLostFocus(){
      comboopenflag = "off";
      showOptions();
    }

    //drop down options
    function showOptions3() {
      if (comboopenflag != "on") {
        document.getElementById('combodiv').style.display = "block";
        comboopenflag = "on";
      } else if (comboopenflag == "on") {
        document.getElementById('combodiv').style.display = "none";
        comboopenflag = "off";
      }
    }

    function setOption3(selection) {

      var combo = document.getElementById('gift').value = selection;
      document.getElementById('combodiv').style.display = "none";
      comboopenflag = "off";
    }

    function handleLostFocus3(){
      comboopenflag = "off";
      showOptions3();
    }

    function check_zipcode()
    {
      var zip_val = document.getElementById('zipcode').value;
      if( zip_val == "" || zip_val == "zipcode" || !/^\d+$/.test(zip_val))
      {
        document.getElementById('zipcode').focus;
        document.getElementById('zipcode').value = "";
        alert("Please enter a valid zipcode");
        return false;
      }
      else return true;
    }
  </script>
</head>

<div class="IphoneImg">
  <div class="Find">

    <table width="400" border="0" align="center" cellpadding="0" cellspacing="0">


      <tr>
        <td height="70" align="left" valign="top" ></td>
      </tr>
      <tr>
        <td height="40" align="left" valign="top" style="border-bottom:1px  dotted #666666;">Find a Studio Near You</td>
