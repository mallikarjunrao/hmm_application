<h1>Listing contests</h1>

<table>
  <tr>
  <% for column in Contest.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for contest in @contests %>
  <tr>
  <% for column in Contest.content_columns %>
    <td><%=h contest.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => contest %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => contest %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => contest }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @contest_pages.current.previous } if @contest_pages.current.previous %>
<%= link_to 'Next page', { :page => @contest_pages.current.next } if @contest_pages.current.next %> 

<br />

<%= link_to 'New contest', :action => 'new' %>
