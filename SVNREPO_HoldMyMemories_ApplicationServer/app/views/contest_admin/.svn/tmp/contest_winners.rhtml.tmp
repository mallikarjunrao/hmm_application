                  <td align="right"><a href="/contest_admin/delete_winners?single=true&contest_phase=<%= @winner.contest_phase %>&winner_type=photo&winner_index=<%= i %>" onClick="return go_there1();"><font color="red">Delete</font></a></td></tr>
                <% i +=1 %>
              <% end %>
            <% end %>
          </table>
        </td>
        <td align="center" width="280">
          <table align="center" width="280">
            <% if !@winner.video_winner_name.blank? && @winner.video_winner_name.length > 0%>
