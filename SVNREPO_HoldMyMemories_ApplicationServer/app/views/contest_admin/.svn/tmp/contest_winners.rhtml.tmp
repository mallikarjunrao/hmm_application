  <tr>
    <td align="center" valign="top">
      <form action="/contest_admin/contest_winners" method="post">
        <table width="512" border="0" align="center" cellpadding="0" cellspacing="0">
          <tr><td align="right" height="40" colspan="2">Contest Name:</td>
            <td align="center" height="40" colspan="2"><select name="contest_phase">
                <option value="" selected>-- Select --</option>
                <% @contest_name.each do |contest| %>
                  <option value="<%= contest.id %>"><%= contest.name %></option>
                <% end %>
              </select><br></br>
            </td>
          </tr>
          <tr>
            <td align="center" height="40" colspan="2"><h2>Photo Winners</h2></td>
          </tr>
          <tr>
            <td align="center" height="40">Winner's name:</td><td><input type="text" name="photo_winner_name[name]" /></td>
            <td align="center" height="40">Winner's image URL:</td><td><input type="text" name="photo_winner_name[url]" /></td>
            <td align="center" height="40">Winner's photo Link:</td><td><input type="text" name="photo_winner_name[link]" /></td>
          </tr>
          <tr>
            <td align="center" height="40" colspan="2"><h2>Video Winners</h2></td>
          </tr>
          <tr>
            <td align="center" height="40">Winner's name:</td><td><input type="text" name="video_winner_name[name]"/></td>
            <td align="center" height="40">Winner's video image URL:</td><td><input type="text" name="video_winner_name[url]" /></td>
            <td align="center" height="40">Winner's video Link:</td><td><input type="text" name="video_winner_name[link]" /></td>
          </tr>
          <tr>
            <td align="center" colspan="6" height="40">
              <input type="submit" name="Submit" value="submit" class="sub-btn"/>
            </td>
          </tr>
        </table>
      </form>
    </td>
  </tr>
  <table border="1" cellpadding="0" cellspacing="0" align="center"  style="margin-top: 50px">
    <tr>
      <td  background="/images/body_hor.JPG"  height="30" align="center">Contest Name</td>
      <td  background="/images/body_hor.JPG"  height="30" align="center">Winner's Photo Name</td>
      <td  background="/images/body_hor.JPG"  height="30" align="center">Winner's Video Name</td>
      <td  background="/images/body_hor.JPG"  height="30" align="center">Action</td>
    </tr>
    <% for @winner in @winners %>
      <tr>
        <td align="center"><%= ContestDetail.find(@winner.contest_phase).name %></td>
        <td align="center" width="280">
          <table align="center" width="280">
            <% if !@winner.photo_winner_name.blank? && @winner.photo_winner_name.length > 0%>
            <% i = 0 %>
              <% for p in @winner.photo_winner_name %>
