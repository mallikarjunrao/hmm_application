<form name="rej_email" action="/manage_contests/contest_reject/<%=params[:id]%>?cid=<%=params[:cid]%>&typ=<%=params[:typ]%>" method="post">
	
	<table border="0">
		<tr>
			<td width="50">&nbsp</td>
			<td width="100">&nbsp</td>
		    <td width="10">&nbsp</td>
		    <td width="300">&nbsp</td>
			<td width="500">&nbsp</td>
		</tr>
		<tr>
			<td colspan="4">
				Please enter the message as why the contest entry is been rejected
			</td>
			<%if @contest[0]['moment_type']=='image'%>
			<td width="500" rowspan="5" align="top">
				
				<img src="<%= @content_url[0]['img_url'] %>/user_content/photos/big_thumb/<%= @content_url[0]['v_filename'] %>" border="0" />
				<%else%>
				<td width="500" rowspan="6" align="top">
				<input type="hidden" id="contentId" value="<%=@content_url[0].img_url%>/user_content/videos/<%=@content_url[0].v_filename%>.flv">
										<input type="hidden" id="type" value="video">
                                        <input type="hidden" id="proxyurl" value="<%=@content_url[0].img_url%>">
			<input type="hidden" id="swfName" value="/MediaPlayer">
									<script src="/AC_OETags.js" language="JavaScript"></script>
									<script src="DWConfiguration/ActiveContent/IncludeFiles/AC_RunActiveContent.js" type="text/javascript"></script>
									<script type="text/javascript">
										var galId = document.getElementById("contentId").value;
										var flashName = document.getElementById("swfName").value;
										var hmmtype = document.getElementById("type").value;
                                        var proxyurl = document.getElementById("proxyurl").value;
										AC_FL_RunContent( 'codebase','http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=7,0,19,0',
														'width','500',
														'height','401',
														'src', flashName,
														'quality', 'high',
														'pluginspage','http://www.macromedia.com/go/getflashplayer',
														'movie',flashName,
                                                        'bgcolor','#000000',                                                        
														'allowFullScreen','true',
														'flashvars', 'hmmtype='+hmmtype+'&content='+galId+"&proxyurl="+proxyurl
														); //end AC code
									</script><noscript><object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000" codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=7,0,19,0" width="500" height="401">
  									<param name="movie" value="/Chapter.swf" />
									<param name="quality" value="high" />
  									<param name="FlashVars"  />
  									<embed src="/MediaPlayer.swf" quality="high" FlashVars=""  pluginspage="http://www.macromedia.com/go/getflashplayer" type="application/x-shockwave-flash" width="500" height="401"></embed>
									</object></noscript>
			
				<%end%>
			</td>
		</tr>
		<tr><td colspan="4">&nbsp</td></tr>
		<tr>
			<td width="50">&nbsp</td>
			<td align="right" valign="top">
				Message
			</td>
			<td>&nbsp;</td>
			<td><textarea name="message" id="message"  rows="5" cols="30"></textarea> </td>
		</tr>
		<tr><td colspan="4">&nbsp</td></tr>
		<tr>
			<td colspan="4" align="center">
				<input type="submit" name="sub" id="sub" value="send mail">
			</td>
		</tr>
		<tr height="300"><td colspan="4">&nbsp;</td></tr>
	</table>
</form>