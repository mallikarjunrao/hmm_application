
xml.instruct! :xml, :version=>"1.0" 
xml.subchapterid(@subchapterid)
xml.contents{
  for gallery in @galleries
     @content_count=UserContent.count(:all, :conditions => " gallery_id=#{gallery.id} and status='active'") 
   if(@content_count>0)    
      xml.content{

      if(gallery.v_gallery_image=='picture.png' || gallery.v_gallery_image=='audio.png' ||gallery.v_gallery_image=='video.png') 
        xml.icon(gallery.img_url + '/user_content/photos/icon_thumbnails/noimage.jpg') 
        xml.foldericon(gallery.img_url+"/user_content/photos/icon_thumbnails/#{gallery.v_gallery_image}")
      else
        imageName  = gallery.v_gallery_image
        imageName.slice!(-3..-1)
        xml.icon(gallery.img_url + '/user_content/photos/flex_icon/'+imageName+"jpg" )
        xml.foldericon(gallery.img_url+"/user_content/photos/icon_thumbnails/#{imageName}png")
     end
     if(gallery.v_gallery_name == "" || gallery.v_gallery_name==nil)
      xml.name("Gallery")
     else
      xml.name(gallery.v_gallery_name)
     end
      xml.galtype(gallery.e_gallery_type)
      xml.id(gallery.id)
      }
 end
 end
}