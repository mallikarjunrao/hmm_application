<form name="frm" action="/my_familywebsite/authenticate">
<input type="hidden" name="url" id="url" value="<%=params[:url]%>" />
<table width="875" border="0" cellspacing="0" cellpadding="0" align='center'>
<tr>
<td align="center">

  <% if params[:familyname] %>

  <input type="hidden" name="family_name" id="family_name" value="<%=params[:familyname]%>" />
  <input type="hidden" name="id" id="id" value="<%=params[:id]%>" />
  <%end%>
