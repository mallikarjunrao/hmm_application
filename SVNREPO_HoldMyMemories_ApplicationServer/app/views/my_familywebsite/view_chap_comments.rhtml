	<input type="hidden" value="<%= params[:id] %>" name="tag_id" />
	<input type="hidden" value="<%= params[:redirect] %>" name="redirect" />
	
		<%
		for j in @tag_c %>
		
		
	<tr bordercolor="#000000">
      
      <th width="25%" align="left" valign="top" class="text-journal" scope="col"><span class="commenthr">Commented By&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>  </th>
