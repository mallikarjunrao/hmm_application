    </tr>
	<tr bordercolor="#000000">
      
      <th colspan="2" align="left" valign="top" class="text-journal" scope="col"><hR color="#151515"></th>
      
    </tr>

  <%end%> 
  <tr><td align="right" class="commentcont">
		  	
			<%if @page==0 %>
			
			<% if @nonext==1%>
			<%else%>
			<%= link_to_remote("Next >> ",
				:update => "add_comment", :url => {  :action =>:view_chap_comments, :page => @nextpage, :tag_id => @tagid, :jid => @id, :familyname => @familyname} ) %>
			<%end%>
			<%else%>
			
			<%= link_to_remote("  << Previous ",
