 <form name="frm" action="" onSubmit="return validate();">
 	<input type="hidden" name="moment_type" value="<%=params[:moment_type]%>" >
	<input type="hidden" name="moment_id" value="<%=params[:moment_id]%>" >
	<input type="hidden" name="link" value="<%=params[:link]%>" >
	<input type="hidden" name="familyname" value="<%=params[:familyname]%>" >
	<input type="hidden" name="cartid" value="<%=params[:cartid]%>" >
 <script type="text/javascript">
function checkform ( form )
{
  // see http://www.thesitewizard.com/archive/validation.shtml
  // for an explanation of this script and how to use it on your
  // own website

  // ** START **
  if (form.nonhmm.value == "") {
    alert( "Please enter your email address." );
    form.email.focus();
    return false ;
  }
  // ** END **
  return true ;
}

function validate()
{
	if(document.getElementById('pname').value=='')
	{
		alert('Please select a Size');
		return false;
	}

}

</script>



	<script type="text/javascript">
		function changeproperty(element,status)
		{
			if(status==false)
			{

				document.getElementById(element).value = '';
				document.getElementById(element).disabled = true;
			}else if(status==true)
				document.getElementById(element).disabled = false;
		}
	</script>

<fieldset>
<table width="100%"><tr><td width="37%" valign="middle">
