<h1>View Studios</h1>
<table>
 	 <tr class="8"><td><a href="javascript:history.back();"><< Back</a></td></tr>
 
  <%if(@studiocnt>0)%>
  <tr>
    <th background="/images/body_hor.JPG"><font class='txt'>Studio Name</font></th>
    <th background="/images/body_hor.JPG"><font class='txt'>Created Date</font></th>
  </tr>

  <%
  odd_or_even = 0
  i = 0
  for studio in @studios
    i = i + 1
    odd_or_even = 1 - odd_or_even

  %>
    <tr class='ListLine<%=odd_or_even %>'>
      <td><%=studio.studio_name %></td>
       <td><%=studio.created_at.strftime("%m / %d / %Y ") %></td>
  </tr>
  <% end %>
  <%else%>
     <tr>
       <th colspan="8"><font class='txt'>No Records Found</font></th>
  </tr>
     <%end%>

</table>


<br />

