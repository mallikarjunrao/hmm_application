<%= error_messages_for 'cupon' %>


<table>
	<tr>
		<td>&nbsp;</td>
		<td>&nbsp;</td>
		<td>&nbsp;</td>
	</tr>
	<tr>
		<td align="right"><label for="cupon_valid_period">Months</label></td>
		<td>&nbsp;</td>
		<td><select name="cupon[valid_period]" id='valid_period' class => "combobox1">
			
				
				<option value="1"<%if @cupon.valid_period == 1%> selected="selected" <%end%> >1 month</option>
				
				<option value="3"<%if @cupon.valid_period == 3%> selected="selected" <%end%> >3 months</option>
				
				<option value="6"<%if @cupon.valid_period == 6%> selected="selected" <%end%> >6 months</option>
				
				<option value="12"<%if @cupon.valid_period == 12%> selected="selected" <%end%> >12 months</option>
				
				<option value="ff" <%if @cupon.valid_period == 'ff'%> selected="selected" <%end%> >Free Forever</option>
				
			</select>
		</td>
	</tr>
	<tr>
		<td colspan="3">&nbsp;</td>
	</tr>
	<tr>
		<td  align="right"><label for="cupon_start_date">Start Date</label></td>
		<td>&nbsp;</td>
		<td><%= date_select 'cupon', 'start_date', :id => 'start_date' ,  :order => [:month, :day, :year], :start_year => Time.now.year , :end_year => Time.now.year + 1    %>
		</td>
	</tr>
	
	<tr>
	<tr>
		<td colspan="3">&nbsp;</td>
	</tr>
	<tr>
		<td align="right"><label for="cupon_expire_date">Expire Date</label></td>
		<td>&nbsp;</td>
		<td><%= date_select 'cupon', 'expire_date', :id => 'expire_date' ,  :order => [:month, :day, :year], :start_year => Time.now.year , :end_year => Time.now.year + 1    %>
		</td>
	</tr>
	
	<tr>
		<td colspan="3">&nbsp;</td>
	</tr>
	<tr>
		<td align="right"><label for="cupon_cupon_type">Coupon type</label></td>
		<td>&nbsp;</td>
		<td><select name="cupon[cupon_type]" id='cupon_type' class => "combobox1">
				
				<option value="premium" <%if @cupon.cupon_type == 'premium'%> selected="selected" <%end%>>Premium</option>
				<option value="family_website" <%if @cupon.cupon_type == 'family_website'%> selected="selected" <%end%>>Family Website</option>
			</select>
		</td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td>&nbsp;</td>
		<td>&nbsp;</td>
	</tr>
	
</table>