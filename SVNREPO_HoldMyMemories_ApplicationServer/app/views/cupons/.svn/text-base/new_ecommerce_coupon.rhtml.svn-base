<%= javascript_include_tag 'prototype' %>
<%= javascript_include_tag 'scriptaculous' %>

<script language="javascript">
  function SubmitCheckForm()
  {



    frmCheckform	= document.Checkform;
    // assigh the name of the checkbox;
    var chks = document.getElementsByName('studios[]');

    var hasChecked = false;
    // Get the checkbox array length and iterate it to see if any of them is selected
    for (var i = 0; i < chks.length; i++)
    {
      if (chks[i].checked)
      {
        hasChecked = true;
        break;
      }
    }
    // if ishasChecked is false then throw the error message
    if (!hasChecked)
    {
      alert("Please select at least one studio.");
      //chks[0].focus();
      return false;
    }
    // if one or more checkbox value is selected then submit the form
    //booSubmit = confirm("Are you sure to add this language list(s)?");
    if(document.getElementById('ecommerce_coupon_type').value=='')
    {

      alert("Please select discount type");
      return false;
        
    }
    if((document.getElementById('ecommerce_coupon_discount_amount').value=='') && (document.getElementById('ecommerce_coupon_discount_percentage').value==''))
    {

      alert("Please enter the discount");
      return false;

    }
  }
</script>
<% form_tag :action => 'create_ecommerce_coupons' do %>
  <table width="600">
    <tr><td colspan="2">&nbsp;</td></tr>
    <tr><td colspan="2" align="left"><h2>Generate Ecommerce Coupons</h2></td></tr>
    <tr>
      <td width="200"></td>
      <td>
        <%= render :partial => 'ecommerce_form' %>
      </td>
    </tr>
    <tr>
      <td align="center" colspan="2">
        <input type="submit" name="sub" value="Submit" onClick="return SubmitCheckForm();">
      </td>
    </tr>
  </table>

<% end %>

