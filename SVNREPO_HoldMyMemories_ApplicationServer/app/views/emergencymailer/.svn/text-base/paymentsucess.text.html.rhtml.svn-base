<% 
   daydate=Time.now.strftime("%d")
    
   strlength=daydate.length 
   last_letter=daydate.slice(strlength-1, (strlength))
   if(last_letter == '2')
     sub='nd'
   else
     if(last_letter == '3')  
     sub='rd'
     else
       sub='th'
    end
    end	
%>


