<%
@share_image = "#{@family_website_owner.img_url}/hmmuser/familyphotos/thumbs/#{@family_website_owner.family_pic}" if @share_image.blank?
@share_type = 'image' if @share_type.blank?
@share_video = '' if @share_video.blank?

@theme = Theme.find(@family_website_owner.theme_id) #get theme details
@header_logo_color = @theme.header_logo_color
@studio_header_img="default_top_logo_#{@header_logo_color}.png" #default logo depending upon the header logo color specified in the themes table
@studio_website = "/" #default studio link

unless @family_website_owner.studio_id==0
  @studio_header = HmmStudio.find(@family_website_owner.studio_id)
  if @studio_header
    @studio_header_img = "#{@studio_header.studio_top_logo}_#{@header_logo_color}.png" if @studio_header.studio_top_logo != nil
    @studio_website = @studio_header.studio_website if @studio_header.studio_website != nil
  end
end

if(@detail)
  if(@store=="" || @store==nil)
    @title="Brought to you by HoldMyMemories.com"
  else
    @title="Brought to you by #{@store} Studios"
  end
else
  @title="Brought to you by HoldMyMemories.com"
end

if @family_website_owner.family_name.downcase == "eveleth"
  @studio_header_img="default_s121_logo_#{@header_logo_color}.png"
  @studio_website="http://www.s121.com"
end

if @family_website_owner.family_name.downcase == "bob"
  @studio_header_img="default_top_logo_#{@header_logo_color}.png"
  @studio_website="/"
end
style = (@family_website_owner.theme).split(".")
%>

<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta name="title" content="title" />
    <meta name="description" content="www.HoldMyMemories.com" />

    <meta name="medium" content="" />
    <title>HoldMyMemories</title>
    <link href="<%=@path.proxyname%>/stylesheets/themes/<%=style[0]%>_facebook.css" rel="stylesheet" type="text/css" />
    <link href="<%=@path.proxyname%>/stylesheets/main.css" rel="stylesheet" type="text/css" />
<link href="<%=@path.proxyname%>/stylesheets/hmmout.css" rel="stylesheet" type="text/css" />
    <style type="text/css">
      .banner-welcome-txt{
	font-family:"Century Gothic", Arial, Verdana, sans-serif;
	font-size:18px;
	color:#454545;
	font-weight:normal;
      }


      #bottombandfacebook {
        background-image:url(<%=@image_path%>/bottombandfacebook_full.png);
        background-repeat:no-repeat;
        background-position:center;
        position:fixed;
        bottom:0px;
        left:0px;
        width: 100%;
        text-align: center;
      }

      .rightshad_facebook{
        background-image: url(<%=@image_path%>/right_shad_facebook.png);
        background-repeat: repeat-y;
        background-position:left top;
        height:100%;
        border:1px solid transparent;
      }

      .leftshad_facebook{
        background-image: url(<%=@image_path%>/left_shad_facebook.png);
        background-repeat: repeat-y;
        background-position:right top;
        height:100%;
        border:1px solid transparent;
      }

    </style>
  </head>
  <% if @family_website_owner.family_name=="bob" || @family_website_owner.family_name=="eveleth"  %><p align="center" > <font color="black" size="3" face="arial"> Add your HoldMyMemories Familywebsite to your Profile page. Just click on the button <fb:add-profile-tab />.</font><%end%></p>
  <div class="body_bg">

    <table width="520" border="0" align="center" cellpadding="0" cellspacing="0" class="body_bg_design">

      <tr>
        <td width="25" height="100%" align="right" valign="top" class="leftshad_facebook"></td>
        <td align="center" valign="top" ><table width="700" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td height="12"  align="left" valign="top"></td>
            </tr>
            <tr>
              <td  align="center" valign="top"><table width="98%" border="0" align="center" cellpadding="0" cellspacing="0" class="content-texture">
                  <tr>
                    <td height="5" colspan="5" align="right" valign="top"></td>
                  </tr>
                  <tr>
                    <td width="4" align="right" valign="top">&nbsp;</td>
                    <td width="201" height="145"  align="left" valign="top" ><table width="100%" border="0" cellspacing="0" cellpadding="8">
                        <tr>
                          <td align="center" valign="top" class="top-banner-grad-bg"><table width="185" border="0" cellspacing="0" cellpadding="0">
                               <tr>
                                  <td  align="center" valign="middle" ><div align="center" >
                                    <a href="<%= @studio_website %>" target="_blank">
                                      <img src="<%=  @family_website_owner.img_url %>/hmmuser/familyphotos/thumbs/<%=  @family_website_owner.family_pic %>"    border="0" height="132" usemap="#Map"/>
                                  </a></div>
                                  </td>
                            </tr>
                            </table></td>
                        </tr>
                      </table></td>
                    <td width="284" height="145" align="right" valign="top" ><table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                          <td align="center" valign="middle"><table width="96%" border="0" cellspacing="0" cellpadding="0">
                              <tr>
                                <td  align="left" valign="middle" class="banner-welcome-txt"><% if @family_website_owner.familyheader_image!=nil %>
                                            <img src="<%=@family_website_owner.img_url%>/familytitleImages/<%=@family_website_owner.familyheader_image %>" />

                                          <% end %></td>
                              </tr>
                              <tr>
                                <td  align="center" valign="middle"><div align="center"><%if @family_website_owner.familypage_image != nil %>
                                            <img src="<%=@family_website_owner.img_url%>/familytitleImages/<%=@family_website_owner.familypage_image %>" />
                                          <% end %></div></td>
                              </tr>
                              <tr>
                                <td align="right" valign="middle" class="banner-welcome-txt"><div align="right"><% if @family_website_owner.familyfooter_image != nil %>
                                            <img src="<%=@family_website_owner.img_url%>/familytitleImages/<%=@family_website_owner.familyfooter_image %>" />

                                          <% end %></div></td>
                              </tr>
                            </table></td>
                        </tr>
                      </table></td>
                    <td width="201" height="145"  align="left" valign="top" ><table width="100%" border="0" cellspacing="0" cellpadding="8">
                        <tr>
                          <td align="center" valign="top" class="top-banner-grad-bg"><table width="185" border="0" cellspacing="0" cellpadding="0">
                               <tr>
                                  <td  align="center" valign="middle" ><div align="center" >
                                    <a href="<%= @studio_website %>" target="_blank">
                                      <img src="<%=@content_server_url%>/user_content/studio_top_logos/default_s121_logo_white.png" width="175" height="132" border="0" usemap="#Map"/>
                                  </a></div>
                                  </td>
                            </tr>
                            </table></td>
                        </tr>
                      </table></td>
                    <td width="5" align="right" valign="top">&nbsp;</td>
                  </tr>
                  <tr>
                    <td height="5" colspan="5" align="right" valign="top"></td>
                  </tr>
                </table></td>
            </tr>
            <tr>
              <td height="12"  align="left" valign="top"></td>
            </tr>
            <tr>
              <td  align="center" valign="top"><table width="98%" border="0" align="center" cellpadding="0" cellspacing="0" id="tab_bgcolor">
                  <tr>
                    <td height="36" align="center" valign="bottom"><%= render :partial => "partials/headermenu_facebook", :locals => { :current_path => "#{@path.proxyname}", :family_name => "#{@family_website_owner.family_name}"} %></td>
                  </tr>
                </table></td>
            </tr>
            <tr>
              <td  height="12" align="left" valign="top"></td>
            </tr>


            <tr>
              <td height="370" align="center"><div align="center"><%=  yield %></div></td>
            </tr>

            <tr>
              <td height="61" align="center" valign="middle" id="tab_bgcolor" class="content-white">
                <%= render :partial => "partials/footermenu_facebook" %></td>
            </tr>
            <tr>
              <td align="center" valign="top" height="25">&nbsp;</td>
            </tr>
            <tr>
              <td align="center" valign="bottom"><div id="bottombandfacebook" align="center"><%= render :partial => "partials/floatmenu_facebook" %></div></td>
            </tr>
          </table></td>
        <td align="left" valign="top" class="rightshad_facebook" width="25"></td>
      </tr>
    </table>
  </div>
</html>