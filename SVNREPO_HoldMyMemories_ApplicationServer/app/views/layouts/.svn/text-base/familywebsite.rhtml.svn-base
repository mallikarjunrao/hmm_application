<%
@share_image = "#{@family_website_owner.img_url}/hmmuser/familyphotos/thumbs/#{@family_website_owner.family_pic}" if @share_image.blank?
@share_type = 'image' if @share_type.blank?
@share_video = '' if @share_video.blank?

@theme = Theme.find(@family_website_owner.theme_id) #get theme details
@header_logo_color = @theme.header_logo_color
@studio_header_img_url = "http://content.holdmymemories.com"
@studio_header_img="default_top_logo_#{@header_logo_color}.png" #default logo depending upon the header logo color specified in the themes table
@studio_website = "/" #default studio link

unless @family_website_owner.studio_id==0
  @studio_header = HmmStudio.find(@family_website_owner.studio_id)
  if @studio_header
    @studio_header_img_url = @studio_header.img_url
    @studio_header_img = "#{@studio_header.studio_top_logo}_#{@header_logo_color}.png" if @studio_header.studio_top_logo != nil
    @studio_website = @studio_header.studio_website if @studio_header.studio_website != nil
  end
end

if(@detail)
  if(@store=="" || @store==nil)
    @title="Brought to you by HoldMyMemories.com"
  else
    @title="Brought to you by #{@store} Studios"
  end
else
  @title="Brought to you by HoldMyMemories.com"
end

if params[:id].downcase == "eveleth"
  @studio_header_img="default_s121_logo_#{@header_logo_color}.png"
  @studio_website="http://www.s121.com"
end

if params[:id].downcase == "bob"
  @studio_header_img="default_top_logo_#{@header_logo_color}.png"
  @studio_website="/"
end

%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
  <head>

    <script type="text/javascript">
      fullurl=document.URL;
      url=fullurl.split("/");
      for(i=0;i<=url.length;i++)
      {

        if(url[i])
        {
          url[i]=url[i].toUpperCase();
          if((url[i].indexOf("%3CSCRIPT%3E") >= 0) || (url[i].indexOf("%3C/SCRIPT%3E") >= 0) || (url[i].indexOf("%3C/SCRIP%3E") >= 0) || (url[i].indexOf("%3CSCRIP") >= 0) ||(url[i].indexOf("JAVASCRIPT:ALERT") >= 0)||(url[i].indexOf("<<<<<<<<<<$URL$>>>>>") >= 0))
          {
            window.location="/nonexistent_page.html"
          }
        }
      }
    </script>
    <script type="text/javascript">
      function fbs_click_facebook(id) {

        new Ajax.Request("/contests/create_sharecount/"+id+"?from=facebook");

        return false;
      }
      function fbs_click_myspace(id)
      {

        new Ajax.Request("/contests/create_sharecount/"+id+"?from=myspace");
        return false;
      }
      function change_familypic(url)
      {
        if(/(ftp|http|https):\/\/(\w+:{0,1}\w*@)?(\S+)(:[0-9]+)?(\/|\/([\w#!:.?+=&%@!\-\/]))?/.test(url))
          document.getElementById('placeholderimage').src = url;
      }
    </script>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=EDGE" />

    <meta name="title" content="<%=@title%>" />
    <meta name="description" content="www.HoldMyMemories.com" />

    <link rel="image_src" href="<%= @share_image %>" />
    <% unless @share_video.blank? %>
      <link rel="video_src" href="<%=  @share_video %>"/>
      <meta name="video_height" content="480" />
      <meta name="video_width" content="640" />
      <meta name="video_type" content="application/x-shockwave-flash" />
    <% end %>
    <meta name="medium" content="<%=  @share_type %>" />
    <title>HoldMyMemories</title>
    <link rel="SHORTCUT ICON" href="/images/common/favicon.ico" type="image/x-icon" />
