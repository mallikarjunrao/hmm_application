<h1>Listing share_moments</h1>

<table>
  <tr>
  <% for column in ShareMoment.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for share_moment in @share_moments %>
  <tr>
  <% for column in ShareMoment.content_columns %>
    <td><%=h share_moment.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => share_moment %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => share_moment %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => share_moment }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @share_moment_pages.current.previous } if @share_moment_pages.current.previous %>
<%= link_to 'Next page', { :page => @share_moment_pages.current.next } if @share_moment_pages.current.next %> 

<br />

<%= link_to 'New share_moment', :action => 'new' %>
