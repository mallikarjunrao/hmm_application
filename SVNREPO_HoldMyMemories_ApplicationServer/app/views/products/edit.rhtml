<h1>Edit Size & Price</h1>


<script type="text/javascript">
function validate()
{
	if(document.getElementById('name').value=='')
	{
		alert("Size is required");
		document.getElementById('name').focus();
		return false;
	}
	if(document.getElementById('height').value=='')
	{
		alert("Height is required");
		document.getElementById('height').focus();
		return false;
	}
	if(document.getElementById('height').value>20)
	{
		alert("Height should be in inches and not more than 20");
		document.getElementById('height').focus();
		return false;
	}
	if(document.getElementById('width').value=='')
	{
		alert("Width is required");
		document.getElementById('width').focus();
		return false;
	}
	if(document.getElementById('width').value>20)
	{
		alert("Width should be in inches and not more than 20");
		document.getElementById('height').focus();
		return false;
	}
	if(document.getElementById('dpi').value=='')
	{
		alert("DPI is required");
		document.getElementById('dpi').focus();
		return false;
	}
	if(document.getElementById('price').value=='')
	{
		alert("Price is required");
		document.getElementById('price').focus();
		return false;
	}
}
</script>



<form name="frm" action="/products/update/<%=@product.id%>" method="post" onsubmit="return validate();">
 <%= error_messages_for 'product' %>
<%
@companylist=HmmStudio.find(:all)

%>
<!--[form:product]-->
<p><font color="red"><%=flash[:notice]%></font>
<p><label for="product_company_name">Company</label><br/>
<select name="store_id">
	<option value="0" <%if(Integer(@product.studio_id)==0)%> selected <%end%>>HMM</option>
	<% for cid in  @companylist %>
	<option value="<%=cid.id%>" <%if(Integer(@product.studio_id)==Integer(cid.id))%> selected <%end%>><%=cid.studio_branch%></option>

	<%end%>
</select>
</p>
<p>
<table>
<tr><td>Size</td><td>:</td><td><input type="text" name="name" id="name" value="<%=@product.name%>" /></td></tr>
<tr><td>Height</td><td>:</td><td><input type="text" name="height" id="height" value="<%=@product.height%>" maxlength="5"/> Inches</td></tr>
<tr><td>Width</td><td>:</td><td><input type="text" name="width" id="width" value="<%=@product.width%>" maxlength="5"/> Inches</td></tr>
<tr><td>DPI</td><td>:</td><td><input type="text" name="dpi" id="dpi" value="<%=@product.dpi%>" /></td></tr>
<tr><td>Price</td><td>:</td><td><input type="text" name="price" id="price" value="<%=@product.price%>" /></td></tr>
<tr><td></td><td></td><td><input type="submit" name="sub" value="Edit" /></td></tr>
</table>
</p>
</form>
<br>
<%= link_to 'Back', :action => 'list' , :id =>@product.studio_id  %>
