<%= error_messages_for 'hmm_user' %>
<script type="text/javascript">
  function chek()
  {
    if(document.getElementById('deduct').value=='')
	{
		alert("please enter the credit amount");
                document.getElementById('deduct').focus();
		return false;
	}
  }
</script>
<form name="frm_deduct" id="frm_deduct" action="/credit_points/studio_update_credit/<%=params[:id]%>" method="post" onsubmit="return chek();">
  <input type="hidden" name="ap" value="<%=params[:ap]%>">
<table>
  <tr>
    <td colspan="2"><h1>Update Credit Points</h1></td>
  </tr>
   <tr>
     <td colspan="2"><font color="red"><%=flash[:notice]%></font></td>

  </tr>
  <tr>
    <td>Available Credit Points :</td>
    <td><%=@credit.available_credits%></td>
  </tr>
  <tr>
    <td>Deduct Credit Points :</td>
    <td><input type="text" name="deduct" id="deduct" value=""></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td><input type="button" name="bt_back" value="Back" onclick="javascript:history.back();">&nbsp;&nbsp<input type="submit" name="sub_bt" value="Update" onclick="return chek();"></td>
  </tr>
</table>
</form>