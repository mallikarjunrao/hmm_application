<h1>Editing comments</h1>

<%= error_messages_for :comments %>

<% form_for(:comments, :url => comments_path(@comments), :html => { :method => :put }) do |f| %>
  <p>
    <b>V name</b><br />
    <%= f.text_field :v_name %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', comments_path(@comments) %> |
<%= link_to 'Back', comments_path %>