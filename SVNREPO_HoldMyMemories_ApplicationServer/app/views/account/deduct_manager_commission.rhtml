
<script language="javascript">
     function verify()
        {
            if(document.getElementById('amount').value == '0')
            {
              document.getElementById('amount').focus();
              alert('Please enter amount to be desucted')
              return false
            }
            else
            if(document.getElementById('reason').value == "")
