<script type="text/javascript">
  function check_notes()
  {
  if(document.getElementById('reactivated_admin').value=='')
    {
      alert("Enter the notes");
      return false;
    }
  }
  </script>
<form action="/account/reactivated_admin" method="post" id="<%=params[:id]%>">
<table border="0" cellpadding="0" cellspacing="0" align="left">
<tr><td align="left"><input type="hidden" name="id" value="<%=params[:id]%>"></td></tr>
  <tr height="50"><td align="left"></td></tr>
  <tr><td width="30" align="left">Notes:</td><td><textarea name="reactivated_admin" id ="reactivated_admin" rows="8" cols="35"></textarea></td></tr>
  <tr height="20"><td align="left">Employee Name:</td><td> <select name="employeeid">
        <%for emp in @employees%>
        <option value="<%=emp.id%>"><%=emp.employe_name%></option>
          <%end%>
</select></td></tr>
  <tr height="20"><td align="left"></td></tr>
  
  <tr><td></td><td><input type="submit" name="sub" value="submit" onClick="return check_notes();"/></td></tr>
 
</table>
</form>
