<style type="text/css">
  .welcometxt {
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: 11px;
    font-weight: bold;
    color: #FF6A00;
  }
  h1 {
    font-size: 100%;
    color: #ff0000;
    line-height: 1.5em;
  }
  #contpadding {
    padding-left:10px;
  }
  .yellowtextsmall {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    font-weight: normal;
    color: #d9c99f;
  }
  .video_link_txt {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 12px;
    font-weight: bold;
    text-decoration: none;
    color: #ffffff;
  }
  #borderbox {
    border:1px solid #fff;
    padding:3px;
  }
  .urltextname {
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: 11px;
    font-weight: bold;
    color: #000;
    padding-left:3px;
  }
  .cont {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 13px;
    font-weight: normal;
    color: #8d8d8d;
  }
  .text-journal {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 13px;
    font-weight: normal;
    color: #ffffff;
  }
</style>
<%@rec = HmmUser.find(:all, :conditions => "id=#{logged_in_hmm_user.id}")%>
