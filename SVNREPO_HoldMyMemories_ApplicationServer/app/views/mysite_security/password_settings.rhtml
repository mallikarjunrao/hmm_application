                  </tr>
                  <tr>
                    <td height="20" align="right" valign="middle" class="welcometxt" ><a href="/mysite_security/change_admin_password/<%=params[:id]%>" onmouseout="MM_swapImgRestore()" onmouseover="MM_swapImage('Image17','','/images/changeadminpwovr.jpg',1)"><img src="/images/changeadminpwdef.jpg" name="Image17" width="235" height="32" border="0" id="Image17" /></a></td>
