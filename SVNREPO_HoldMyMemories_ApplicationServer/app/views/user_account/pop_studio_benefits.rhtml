<style>
  .yellow_txt{
    font-family:Arial, Helvetica, sans-serif;
    font-size:14px;
    font-weight:normal;
    color:#d9c99f;
  }

  .orangetexthead {
    font-family: Arial,Helvetica,sans-serif;
    font-size: 18px;
    color: #fe6809;
    font-weight: bold;
    text-decoration: none;
  }
</style>
<body bgcolor="#000000">
  <table width="475" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <th scope="col">&nbsp;</th>
    </tr>
    <tr>
      <th align="center" valign="top" scope="col" style="padding-left:35px;"><span class="yellow_txt"><b><%=@studio.studio_name%></b></span></th>
    </tr>
    <tr>
      <th align="center" valign="top" scope="col" style="padding-left:35px;"><span class="orangetexthead">Studio Benefits</span></th>
    </tr>
    <tr>
      <th align="left" valign="top" scope="col">&nbsp;</th>
    </tr>
    <tr>
      <th align="left" valign="top" class="cont" scope="col" style="line-height:20px;"><table width="100%"><tr><td width="20"></td><td align="center">&nbsp;</td></tr></table>
        <ul>
          <span class="yellow_txt">
            <% if(@benefits.length>0) %>
              <% for studio_benefit in @benefits %>
                <li><%=studio_benefit.content%></li>
              <%end%>
            <%end%>
          </span>
        </ul>
      </th>
    </tr>
  </table>
</body>