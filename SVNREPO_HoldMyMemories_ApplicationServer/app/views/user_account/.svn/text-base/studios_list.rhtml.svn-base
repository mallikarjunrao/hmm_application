  <body>
    <%if @result%>
     <input type="hidden" name="count" id="count" value="<%=@result.length%>" />
     <%end%>
    <% flag=0
    if @result!=nil
      if @result.size > 0 %>
        <table cellpadding="5" cellspacing="5" width="100%" align="left" border="0" bordercolor="#CCCCCC">
          <%i =0
          k=0%>
          <% hmm_studio = HmmStudio.find(:all,:conditions=>"status='active'")%>
          <% for res in @result

            hmm_studio = HmmStudio.count(:all, :conditions => "zip_code='#{res.zip_code}' and status='active' and status='active' and studio_public='yes'")
            if(hmm_studio > 0)

              hmm_studios = HmmStudio.find(:all, :conditions => "zip_code='#{res.zip_code}' and status='active' and status='active' and studio_public='yes'")
              for hmmstudio  in hmm_studios
                flag=1
              %>
                <tr align="left" style="padding:10px;">

                  <td align="left" class="content-trans-box">
                    <!--<%
                    i=i+1
                    if(i==3)
                      i=1
                    %></tr><tr><td>
                    <%end%>-->
                    <br>
                    <div align="left"><% if (hmmstudio.studio_logo==nil || hmmstudio.studio_logo=='')%><%else%> <img src="<%=hmmstudio.img_url%>/user_content/studio_logos/<%=hmmstudio.studio_logo%>" width="189" height="60"><%end%></span><br><br>
                      <span class="orangetexthead"><%=hmmstudio.studio_branch%></span><br>
                      <span class="whitext"><%=hmmstudio.studio_address%></span><br>
                      <a  ><span class="contactlink"><%=hmmstudio.zip_code%></span></a><br>
                      <span class="whitext">
                        <%if(hmmstudio.studio_phone!='' && hmmstudio.studio_phone!=nil)%>
                          <%
                          phn=hmmstudio.studio_phone
                          num1=phn.slice(0, 3)
                          num2=phn.slice(-3, 3)
                          num3=phn.slice(-6,4)

                          dispphn="(#{num1}) #{num2}-#{num3}"

                        %>
                          Phone Number : <%=phn%>
                        <%end%>
                      </span><br>
                      <span class="whitext">Distance (in miles): <%=res.distance.to_f.round(2)%></span>
                      &nbsp;&nbsp;&nbsp;</td><td class="content-trans-box">

                    <%
                    srch="#{hmmstudio.studio_address} #{hmmstudio.city} #{hmmstudio.zip_code} "
                  %>
 <%if hmmstudio.booking_link.nil? ||  hmmstudio.booking_link.blank?
                    link="/my_familywebsite/book_session/?studio_id=#{hmmstudio.id}"
                  else
                     link="#{hmmstudio.booking_link}"
                  end%>
                <center><span class="orange-headlink"><a href="#" class="orange-headlink" onClick="javascript:windowOpener('400', '500', 'Studio Benefits', '/user_account/map/?s=<%=srch%>')">View Directions</a></span>&nbsp;<span class="orange-headlink">|</span>&nbsp;<span class="orange-headlink"><a href="#" class="orange-headlink" onClick="javascript:windowOpener('600', '500', 'Studio Benefits', '/user_account/pop_studio_benefits/?studio_id=<%=hmmstudio.id%>')">Studio Benefits</a></span>&nbsp;<span class="orange-headlink">|</span>&nbsp;<span class="orangetexthead"><a href="<%=link%>" class="orange-headlink" target="_blank">Appointment Request</a></span>&nbsp;<span class="orange-headlink">|</span>&nbsp;<span class="orange-headlink"><a href="/contact_us/email_us/?<%=  Base64.encode64("studio_email")%>=<%=  Base64.encode64(hmmstudio.contact_email)%>" class="orange-headlink" target="_blank">Contact Studio</a></span></center>

                <br />
                <br />
               <br>
              <% counts=GiftCertificate.count(:all,:select=>"a.id",:joins=>"as a,gift_certificate_studios as b",:conditions=>"a.id=b.gift_certificates_id and a.status='active' and b.studio_id=#{hmmstudio.id}") %>
              <% k= k+1 %>

              <%if counts > 0 %>
                <% counts_yes=GiftCertificate.count(:all,:select=>"a.id",:joins=>"as a,gift_certificate_studios as b",:conditions=>"a.id=b.gift_certificates_id and a.status='active' and b.studio_id=#{hmmstudio.id} and a.membership_option='yes'") %>
                <%if counts_yes > 0 %>
                  <span class="orange-headlink" style="margin-left:180px;" ><a href="/customer_gift_certificates/user_type/<%=Base64.encode64(hmmstudio.id.to_s)%>" class="orange-headlink" id="various<%=k%>" rev="modal">Purchase Studio Gift Certificate</a></span>
                <%else%>
                  <span class="orange-headlink" style="margin-left:180px;" ><a href="/customer_gift_certificates/select_certificate/<%=Base64.encode64(hmmstudio.id.to_s)%>?acc=HMM" class="orange-headlink"  >Purchase Studio Gift Certificate</a></span>
                <%end%>
              <%end%>
            <%end%>
          <%end%>
        <%end%>

        </div>
      </td>
    </tr>

    </table>

  <%end%>
<%else%>

<%end%>
<% if params[:radius] && params[:zipcode] %>
  <%if flag==0 %>
    <% @zip_entry=ZipcodeSearch.new()
    @zip_entry['zip_code']=params[:zipcode]
    @zip_entry['miles']=@radius[0]
    @zip_entry['ip_address']=request.remote_ip
    @zip_entry.save
  %>

    <p> <span class="orangetexthead">Sorry, No Studios found. </span></p>
  <%end%>
<%end%>
