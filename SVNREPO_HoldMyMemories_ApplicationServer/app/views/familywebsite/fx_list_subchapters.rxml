xml.instruct! :xml, :version=>"1.0"
#xml.userid(@chapterid)
xml.images{
	i = 0
 for content_subchap in @subchapters
   if(params[:id]=='bob' || params[:id]=='eveleth')
      @content_server_url = "http://content.holdmymemories.com"
    else
      @content_server_url = content_subchap.img_url
    end
  xml.image{
       if(content_subchap.v_image == "folder_img.png")
		xml.icon(@content_server_url + '/user_content/photos/big_thumb/noimage.jpg')
    else	
        imageName  = content_subchap.v_image
        imageName.slice!(-3..-1)
        xml.icon(@content_server_url + '/user_content/photos/flex_icon/'+imageName+"jpg" )
        end
        if(@tag.v_tagname == 'Mobile Uploads')
          xml.navigate_path("/familywebsite/events_moments/#{@family_name}?event_id=#{content_subchap.id}")
        else
          xml.navigate_path("#{@navigate_path+@family_name}?subchapter_id=#{content_subchap.id}&app_type=#{@app_type}")
        end
      xml.type("image")
      xml.response_type(@response_type)
      xml.name(content_subchap.sub_chapname)
      xml.id(content_subchap.id)
      i = i + 1
	}
  end    
}
