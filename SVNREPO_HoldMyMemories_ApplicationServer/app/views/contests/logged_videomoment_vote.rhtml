			<% if @contest_video_pages.page_count > 1 %>
			<font size="3"><%= link_to('Previous', {:params => params.merge('page' => @contest_video_pages.current.previous)}) if @contest_video_pages.current.previous %> &nbsp;&nbsp;&nbsp;</font>
			<% for page in @contest_video_pages -%>
			<font size="3"><%= link_to_unless((params[:page].to_i == page.number),
				 page.number, :page => page) %></font> 
			<% end -%>
			<font size="3">&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to('Next', {:params => params.merge('page' => @contest_video_pages.current.next)}) if @contest_video_pages.current.next %></font>
			<% end %>
			</th>
		</tr>	
