<style type = "text/css">
  .text3 {
    font-family:Arial, Helvetica, sans-serif;
    font-size:12px;
    font-weight:normal;
    color:#ffffff;
  }
  .signedtxtwhite {
    font-family: Verdana, Arial, Helvetica, sans-serif;
    font-size: 10px;
    font-style: normal;
    line-height: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    color: #FFFFFF;
    text-decoration: none;
  }
  a
  {

    color: #dddddd;

  }
</style>
<%  session[:video_vote]="1"%>
<%  session[:image_vote]=nil %>

<script language=javascript>
  var r={'special':/[\W]/g}
  function valid(o,w)
  {
    o.value = o.value.replace(r[w],'');
  }
</script>
<table align="center" width="100%" border="0">
  <tr>
    <td align="left" valign="top"></td>
  </tr>
  <input type="hidden" name="order" value="<%params[:order]%>" />
  <tr>
    <td><font color="#f5dfa6" size="2"><%= flash[:notice_vote]%>
      </font>
      <!--font color="#f5dfa6" size="3">< % if  flash[:notice_invite1] % > You have successfully Invited your friends to vote!!        < %end% ></font -->
    </td>
  </tr>
  <tr align= "center">
    <td colspan="5"></td>
  </tr>
  <tr>
    <td>
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <% contest = ContestDetail.find(params[:contest_id]) %>
          <td width="284" align="center" valign="top"  style="padding-right:20px;">
            <img src=<%= contest.video_logo %> border="0" width="284" />
          </td>
        </tr>
        <tr>
          <td colspan="2" align="center" valign="top">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr><th height="10">&nbsp;</th></tr>
              <tr><th align="center" valign="top" style="color:#FFFFFF">Search Entrants:</th></tr>

              <tr>
                <td align="center" valign="top"><% form_remote_tag :update => 'table',
                    :before => "Element.show('spinner1')",
                    :success => "Element.hide('spinner1')",
                    :url =>"/contests/videomoment_vote?contest_id=#{params[:contest_id]}",
                    :method => 'post',
                    :with => 'query' do %>
                    <input size="10" id="query" name="query" size="15" type="text" value="<%=params[:query]%>" onKeyUp="valid(this,'special')"/></td>
                <%end%>
              </tr>

              <tr>
                <td height="10" colspan="2"></td>
              </tr>
              <tr>
                <td colspan="2" align="center"><table width="34" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td  align="right" ><a href="/contests/videomoment_vote?contest_id=<%=params[:contest_id]%>&sort_key=contest_entry_date&amp;sort_order=<%=@sort1%>"><img src="/images/date1_sort.gif" border="0"></a></td>
                      <td  align="right" ><a href="/contests/videomoment_vote?contest_id=<%=params[:contest_id]%>&sort_key=first_name&amp;sort_order=<%=@sort1%>"><img src="/images/name1_sort .gif" border="0"/></a></td>
                      <td  align="right" ><a href="/contests/videomoment_vote?contest_id=<%=params[:contest_id]%>&sort_key=votes&amp;sort_order=<%=@sort2%>"><img src="/images/vote1_sort%20.gif" border="0"></a></td>
                    </tr>
                  </table></td>
              </tr>
              <tr><th height="10">&nbsp;</th></tr>
              <tr>
                <td height="35" colspan="2" align="center" valign="top"><a href="/contests/moments_vote?contest_id=<%= params[:contest_id] %>"><img src="/images/switch2.gif" width="150" height="23" border="0"/></a> </td>
              </tr>
            </table></td>
        </tr>
      </table></td>
  </tr>
  <tr align="center">
    <th> <table align="center">
        <tr>
          <td colspan="2">&nbsp;</td>
        </tr>
        <tr>
          <% j =  0
          for i in @contest_entries

            if  j==2
              j=0
              j=j+1

            %>
            </tr>
            <tr>
              <td colspan="2">&nbsp;</td>
            </tr>
            <tr>
            <%else
              j=j+1
            end
          %>
            <td><table  border="0" cellpadding="0" cellspacing="0">
                <tr>
                  <td  align="center" valign="middle" style="border:solid; border-color:#383838; border-width:1px;"><a href="/contests/videomoment_details?contest_id=<%= params[:contest_id] %>&moment_id=<%=i.moment_id%>"> <img src="<%= i.img_url %>/user_content/videos/thumbnails/<%= i.v_filename+'.jpg' %>" border="0" width="130"/></a></td>
                </tr>
                <tr>
                  <td height="4" align="center" valign="middle"></td>
                </tr>
                <tr>
                  <td height="15" align="center" valign="middle" class="text3" style="border:solid; border-color:#383838; border-width:1px;"><%=i.contest_fname%></td>
                </tr>
                <tr>
                  <td height="35" align="center" valign="top" class="text3" style="padding-top:5px;"><%if i.contest_entry_date.nil?%>
                      <%=Time.now.strftime("Submitted : %m/%d/%Y") %>
                    <%else%>
                      <%=  i.contest_entry_date.strftime("Submitted : %m/%d/%Y") %></span >
                    <%end%>
                    <%@count = ContestVotes.count_by_sql("select COUNT(*) AS COUNT from contest_votes where contest_id='#{i.contest_id}' and conformed='yes'")  %>
                    <br />
                    <%=@count%> Votes</td>
                </tr>
                <tr>
                  <th height="20" align="center" valign="top" class="cont2" style="padding-top:3px;">
                    <a href="/contests/vote?entry_id=<%=i.contest_id%>&contest_id=<%= params[:contest_id] %>">
                      <input type="button" id="Image4413" class="whiteButton" value="Vote" style="cursor:pointer;" /></a>	</th>
                </tr>
              </table></td>
            <td>&nbsp;</td>
          <%end%>
      </table></th></tr>

  <tr>
    <th align="center" colspan="5" valign="top" class="signedtxtwhite" id="padding_photos" scope="col">
      <h1><%=will_paginate @contest_entries,:params=>params%></h1> </th>
  </tr>
</table>
