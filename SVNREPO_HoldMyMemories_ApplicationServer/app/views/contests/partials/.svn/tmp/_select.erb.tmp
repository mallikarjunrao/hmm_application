<%= javascript_include_tag 'modalbox/prototype' %>
<script type="text/javascript" src="/javascripts/modalbox/scriptaculous.js?load=effects"></script>
<script type="text/javascript" src="/javascripts/modalbox/modalbox.js"></script>
<%= stylesheet_link_tag 'modalbox/modalbox' %>
<table width="840" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr>
    <td align="left" valign="top" height="30"></td>
  </tr>
</table>
<table width="840" border="0" align="center" cellpadding="0" cellspacing="0">
  <tr>
    <td align="left" valign="top"><img src="/images/all_american_family/contest_select_pages/our-current-contest-top-curve.png" width="840" height="56" border="0" /></td>
  </tr>
  <tr>

    <td align="left" valign="top" background="/images/all_american_family/contest_select_pages/middle-bg.jpg">
      <table width="840" border="0" align="center" cellpadding="0" cellspacing="0">
        <tr>
          <td height="23" align="center" valign="middle" colspan="2">&nbsp;</td>
          <td align="left" valign="top" colspan="2">&nbsp;</td>
        </tr>
        <tr><% count = 0 %>

          <td width="420" height="23" align="center" valign="middle" colspan="2">
            <% @contests.each do |contest| %>

              <%if params[:id]
                if params[:controller] == "familywebsite_contest"
                  link="/familywebsite_contest/intro/#{params[:id]}?p=#{Base64.encode64(contest.id.to_s)}"
                else
                  link="/familymemory_contests/intro/#{params[:id]}?p=#{Base64.encode64(contest.id.to_s)}"
                end
              else
                link="/contests/hmm_contest?contest_id=#{Base64.encode64(contest.id.to_s)}"
              end%>
              <a href="<%=link%>"><img src="<%= contest.home_logo %>" width="364" height="139" border="0"/></a>
              <% count+=1 %>
            <% end %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td align="left" valign="top"><img src="/images/all_american_family/contest_select_pages/bot-curve.png" width="840" height="21" /></td>
  </tr>
  <tr>
    <td height="25" align="left" valign="top"></td>
  </tr>
  <tr>
    <td align="center" valign="top"><a href="/contests/specific_rules"  onclick="Modalbox.show(this.href, {title:'My Image', width:860, height:450});return false;"><img src="/images/all_american_family/contest_select_pages/rules-regulations.png" width="298" height="48"  border="0"/></a></td>
  </tr>
  <tr>
    <td height="25" align="left" valign="top">&nbsp;</td>
  </tr>
  <%if(session[:hmm_user]) %>
    <tr>
      <td align="center" valign="top"><a href="/familywebsite_contest/manage_previous_contest/<%=params[:id]%>"><img src="/images/all_american_family/contest_select_pages/previous-contest-winners.png" width="298" height="48" border="0"/></a></td>
    </tr>

  <%else
    if params[:controller] == "familywebsite_contest"
    %>
      <tr>
        <td align="center" valign="top"><a href="/familywebsite_contest/previous_contest/<%=params[:id]%>"><img src="/images/all_american_family/contest_select_pages/previous-contest-winners.png" width="298" height="48" border="0"/></a></td>
      </tr>
    <% else %>
      <tr>
        <td align="center" valign="top"><a href="/contests/previous_contest"><img src="/images/all_american_family/contest_select_pages/previous-contest-winners.png" width="298" height="48" border="0"/></a></td>
      </tr>
    <% end %>
  <%end%>
  <tr>
    <td align="left" valign="top">&nbsp;</td>
  </tr>
  <tr>
    <td align="left" valign="top">&nbsp;</td>
  </tr>
</table>

