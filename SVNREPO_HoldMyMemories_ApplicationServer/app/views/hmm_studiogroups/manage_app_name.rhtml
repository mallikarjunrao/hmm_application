<script type="text/javascript">
  function check_terms()
  {
    if(document.getElementById('app_name').value=='')
    {
      alert("Please add the App Name");
      document.getElementById('app_name').focus();
      return false;
    }
    if(document.getElementById('iphone_app_full_name').value=='')
    {
      alert("Please add the Full App Name");
      document.getElementById('iphone_app_full_name').focus();
      return false;
    }

  }
  function textCounter(field, countfield, maxlimit) {
    if (field.value.length > maxlimit) // if too long...trim it!
        field.value = field.value.substring(0, maxlimit);
        // otherwise, update 'characters left' counter
    else
        countfield.value = maxlimit - field.value.length;
}


</script>
