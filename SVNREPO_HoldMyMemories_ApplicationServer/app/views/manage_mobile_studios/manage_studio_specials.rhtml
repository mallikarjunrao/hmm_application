</form>
<table width="600">
  <tr><td> Previous Specials</td><tr>
  <tr>
    <th width="154" background="/images/body_hor.JPG" ><font class='txt'>Special</th>
    <th width="412" background="/images/body_hor.JPG" ><font class='txt'>Description </th>
    <th background="/images/body_hor.JPG" colspan="3"><font class='txt'>Action</th>
  </tr>
  <% if @studio_specials!=nil && @studio_specials.length>0 %>
    <% for studio in @studio_specials %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= studio.title %></td>
        <td><%= studio.description %></td>
        <td width="55"><div align="center"><%= link_to 'Edit', :action => 'edit_studio_specials', :id => studio.id %></div></td>
        <td width="59"><div align="center"><%= link_to 'Delete', { :action => 'delete_studio_specials', :id => studio.id }, :confirm => 'Are you sure?', :method => :post %></div></td>
      </tr>
    <% end %>
  <% else %>
    <tr><td align="center" colspan="4">Studio specials not found.</td></tr>
  <% end %>
