          <%if(flash[:notice])%>
            <font color="#FF0000"><%=flash[:notice]%></font>
          <%end%>
        </td>
      </tr>
       <%if @special_count  > 0 %>
      <tr>
        <td  align="left" valign="top" class="whitecont">Studio Special Title *<select name="title" id="title" />
