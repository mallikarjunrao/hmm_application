img { 
	position:absolute; 
	top:0px;
	border:none;
}
h1 {
	text-align:center;
        color: #FFFFFF;
}
a{
	color:#000000;
}
.clear{
	clear:both;
}
#images{
	visibility:hidden;
}
#loading{
	margin-top:50px;
	text-align:center;
	width:100%;
}
#loading img{
	margin-top:10px;
	position:relative; 
}
#captions{
	font-weight:bold;
	position:relative; 
	text-align:center;
	z-index:10000;
        color:#ffffff;
}
#scrollbar{
	visibility:hidden;
	position:relative; 
	border-bottom:1px solid #b3b3b3;
	z-index:10001;
}
#slider{
	position:absolute;
	margin-top:-7px;
	margin-left:-7px;
	z-index:10002;
	background-image:url(/imageflow/slider.png);
	background-repeat:no-repeat;
	width:14px;
	height:14px;
        color: #FFFFFF;
}
#imageflow{
	margin-left:20px;
	text-align:left;
}

