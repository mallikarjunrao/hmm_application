<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" 
	verticalGap="0" creationComplete="handleCreationComplete()" horizontalAlign="center" verticalAlign="middle">
	<mx:Image width="84" height="84" source="{imagePath}" />
	<mx:Label text="{data.name}" fontWeight="bold"/>
	<mx:Script>
		<![CDATA[
			[Bindable]
			private var imagePath : String;
			private function handleCreationComplete() : void
			{
			    imagePath = "/hmmuser/photos/thumb/"+data.image;	
			}
		]]>
	</mx:Script>
</mx:VBox>
