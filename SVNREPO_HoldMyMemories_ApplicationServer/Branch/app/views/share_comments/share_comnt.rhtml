<style type="text/css">
<!--
.style1 {
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
	font-size: 12px;
	color:#914511;
}
.style3 {font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 18px; }
-->
</style>

<table width="88%" border="1" bordercolor="#191919" cellspacing="0" cellpadding="3">
    <tr bordercolor="#000000">
      <th align="left" valign="middle" colspan="3" bgcolor="#191919" scope="col" ><span class="btmtxt">Comments on these moments </th>
  </tr>
	
	<% if session[:friend]!='' 
			e_approval=" and 	e_approved = 'approved'"
				end
  
   @share_comment=ShareComments.find(:all, :conditions=> "share_id=#{params[:id]} #{e_approval} ")
 
%>	
	<% for m in @share_comment %>
	
	
		

	<tr bordercolor="#000000"> 
      <th width="6%" height="6" align="left" valign="top" scope="col">&nbsp;</th>
      <th width="19%" align="left" valign="top" class="text-journal" scope="col"><span class="style1">Commented By&nbsp;</span>:</th>
      <th width="75%" align="left" valign="top" scope="col"><span class="text-journal"><%= m.name %></span></th>
  </tr>
	
	<tr bordercolor="#000000">
      <th height="6" align="left" valign="top" scope="col"></th>
      <th align="left" valign="top" class="text-journal" scope="col"><span class="style1">Description</span>:&nbsp;&nbsp;</th>
      <th align="left" valign="top" scope="col"><span class="text-journal"><%= m.comment.gsub("\n", "<br />\n") %></span></th>
    </tr>
	<% if m.reply==nil || m.reply=="" %>
	<%else%>
	<tr bordercolor="#000000">
      <th height="6" align="left" valign="top" scope="col"></th>
      <th align="left" valign="top" class="text-journal" scope="col"><span class="style1">Reply</span>:&nbsp;&nbsp;</th>
      <th align="left" valign="top" scope="col"><span class="text-journal"><%= m.reply %></span></th>
    </tr>
	<%end%>
    <tr bordercolor="#000000">
      <th colspan="3" align="right" valign="middle" bgcolor="#191919" height="15" class="text-journal" scope="col">
       		 <% if session[:friend]!='' 
				else %>
			<% if m.e_approved=="pending" %>
			<a href='/share_comments/approve_cmt/<%= m.id %>'>Approve</a>&nbsp;&nbsp;&nbsp;
			<a href='/share_comments/reject_cmt/<%= m.id %>'>Reject</a>
			<%else%>
			<a href='/share_comments/destroy_cmt/<%= m.id %>'>Delete</a>&nbsp;&nbsp;&nbsp;
                        <%= link_to_remote("Reply", :update =>"me", 
		:url => {:controller => :chapter_comment, :action => :reply_comnt, :cid=> m.id, :table => 'share_comments', :redirect => '111'}, :layout => false  ) %>
                        
			<%end%>	
			<%end%>		</th>
    </tr>
	<%end%>
		
</table>
<%session['redirect']='111'%>
