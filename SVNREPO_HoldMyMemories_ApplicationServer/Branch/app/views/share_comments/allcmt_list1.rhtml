<style type="text/css">
<!--
.style1 {
	font-family: Arial, Helvetica, sans-serif;
	font-weight: bold;
	font-size: 12px;
	color:#e36500;
}
.style3 {font-family: Arial, Helvetica, sans-serif; font-weight: bold; font-size: 18px; }
-->
</style>

<!--Chapter Comments View-->

<table width="100%" border="0" cellspacing="0" cellpadding="0">
  
	
	<tr>
      <th width="22" height="32" align="left" valign="top" bgcolor="#191919" scope="col">&nbsp;</th>
      <th align="left" valign="middle" bgcolor="#191919" colspan="2" scope="col"><span class="btmtxt">Comments for <%=session[:chap_name]%> chapter
	  </th>
      <th width="22" align="left" valign="top" bgcolor="#191919" scope="col">&nbsp;</th>
    </tr>
	
	<tr>
		<th align="right" colspan="2" >
			
		<font color="#f5dfa6" size=2><%=  flash[:notice_cca_list]%></font>
		
		<font color="#f5dfa6" size=2><%=  flash[:notice_ccr_list]%></font>
		
		<font color="#f5dfa6" size="2"><%=  flash[:notice_ccd_list]%></font>
		</th>
	</tr>
	
	<input type="hidden" value="<%= params[:id] %>" name="tag_id" />

	
	<% 
		for j in @share_comment
				 %>


		
	<tr>
      <th height="6" align="left" valign="top" scope="col">&nbsp;</th>
      <th  align="left"  valign="top" class="text-journal" scope="col"><span class="style1">Chapter Name</span>  </th>
      <th width="680" align="left" valign="top" scope="col"><a href="/tags/subchap_coverflow/<%=j.tag_id%>" style="text-decoration:none"> <%= j.v_tagname %></a></th>
    </tr>	
		
		
	<tr>
      <th height="6" align="left" valign="top" scope="col">&nbsp;</th>
      <th  align="left"  valign="top" class="text-journal" scope="col"><span class="style1">Commented By</span>  </th>
      <th width="680" align="left" valign="top" scope="col"><%= j.v_fname %></th>
    </tr>
	
	<tr>
      <th height="6" align="left" valign="top" scope="col">&nbsp;</th>
      <th align="left" valign="top" class="text-journal" scope="col"><span class="style1">Description</span>  </th>
      <th width="680" align="left" valign="top" scope="col"><%= j.v_comment.gsub("\n", "<br />\n") %></th>
    </tr>
	
	<tr>
      <th height="28" align="left" valign="top" bgcolor="#191919" scope="col">&nbsp;</th>
      <th align="right" valign="middle" bgcolor="#191919" class="text-journal" scope="col" colspan="2">
       		<% if j.e_approval=="pending" %>
			 <a href='/chapter_comment/approve_cmt/<%= j.id %>'>Approve</a>&nbsp;&nbsp;&nbsp;
			<a href='/chapter_comment/reject_cmt/<%= j.id %>'>Reject</a> 
			<%else%>
			<a href='/chapter_comment/destroy_cmt/<%= j.id %>'>Delete</a>
			<% end %>
	  </th>
	
	  <th align="left" valign="top" bgcolor="#191919" scope="col">&nbsp;</th>
    </tr>

     <%end%>
  
  <tr>
  	<td colspan="2">
  		<% if @chapter_comment_pages.page_count > 1 %>
		Page&nbsp;:
		<%= pagination_links_remote @chapter_comment_pages %>&nbsp;
		<% end %>
  	</td>
  </tr>
  
</table>
<p></p>
<p></p>
