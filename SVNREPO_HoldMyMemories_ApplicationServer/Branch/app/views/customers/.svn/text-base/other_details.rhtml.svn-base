<script>
function verify(){

	if (document.getElementById('fname').value == 'First Name') {
		alert("Please enter First Name");
		return false;
	}
	if (document.getElementById('lname').value == 'Last Name') {
		alert("Please enter Last Name");
		return false;
	}
	if (document.getElementById('hmm_user_v_security_q').value == '') {
		alert('Please Select Account Security Question');
		return false;
		
	}
	if (document.getElementById('hmm_user_v_password').value == document.getElementById('hmm_user_v_security_a').value) {
		alert('Accout Security Answer Cant be a Password!!');
		return false;
	}
	if (document.getElementById('hmm_user_v_link1').value != "") {
		var v = new RegExp();
		v.compile("^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_%&\?\/.=]+$");
		if (!v.test(document.getElementById('hmm_user_v_link1').value)) {
			alert("You must supply a valid URL.");
			document.getElementById('hmm_user_v_link1').focus();
			return false;
		}
	}
	if (document.getElementById('hmm_user_v_link2').value != "") {
		var v = new RegExp();
		v.compile("^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_%&\?\/.=]+$");
		if (!v.test(document.getElementById('hmm_user_v_link2').value)) {
			alert("You must supply a valid URL.");
			document.getElementById('hmm_user_v_link2').focus();
			return false;
		}
	}
	if (document.getElementById('hmm_user_v_link3').value != "") {
		var v = new RegExp();
		v.compile("^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_%&\?\/.=]+$");
		if (!v.test(document.getElementById('hmm_user_v_link3').value)) {
			alert("You must supply a valid URL.");
			document.getElementById('hmm_user_v_link3').focus();
			return false;
		}
	}
	document.getElementById('imgmsg').style.display = 'block';
	return true;
}

function validate_things()
