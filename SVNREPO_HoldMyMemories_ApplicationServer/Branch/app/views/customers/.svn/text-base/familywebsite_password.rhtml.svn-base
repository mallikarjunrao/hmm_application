<%= javascript_include_tag 'SpryAssets/SpryValidationPassword' %>
<%= javascript_include_tag 'SpryAssets/SpryValidationConfirm' %>

<%= stylesheet_link_tag 'SpryAssets/SpryValidationPassword' %>
<%= stylesheet_link_tag 'SpryAssets/SpryValidationConfirm' %>
<table border="0">
	<tr>
		<th colspan="0" align="right" valign="top" width="110" class="contsignup" scope="col"><label for="hmm_user_familywebsite_password">Password</label>
		</th>
		<th colspan="0" width="10">&nbsp;</th>
		<th colspan="0"><span class="" id="sprypassword20">
			<%= password_field 'hmm_user', 'familywebsite_password', :size => 20, :class => "textbox-signup"%>
			<span class="passwordRequiredMsg">A value is required.</span> <span class="passwordMinCharsMsg">The minimum number of characters not met.</span> </span> 
		</th>
	</tr>
	<tr>
		<th colspan="0" class="contsignup" align="right" valign="top" scope="col">
			Re-type password
		</th>
		<th colspan="0" width="10">&nbsp;</th>
		<th colspan="0">
			<span class="" id="spryconfirm21">
			<%= password_field 'hmm_user', 'familywebsite_password', :size => 20, :class => "textbox-signup"%>
			<span class="confirmRequiredMsg">A value is required.</span> <span class="confirmInvalidMsg">The values don't match</span> </span></span>
		</th>
	</tr>
</table>

<script type="text/javascript">
var sprypassword20 = new Spry.Widget.ValidationPassword("sprypassword20",{validateOn:["blur"]});
var spryconf1 = new Spry.Widget.ValidationConfirm("spryconfirm21", "sprypassword20", {validateOn: ['blur']});
</script>