<h1>List of employees</h1>

<table>
  <tr>
  
    <th background="/images/body_hor.JPG"><font class='txt'>Employee Id</font></th>
	<th background="/images/body_hor.JPG"><font class='txt'>Employee Name</font></th>
	<th background="/images/body_hor.JPG"><font class='txt'>Designation</font></th>
	<th background="/images/body_hor.JPG"><font class='txt'>Address</font></th>
	<th background="/images/body_hor.JPG"><font class='txt'>E-mail</font></th>
	<th background="/images/body_hor.JPG"><font class='txt'>Phone No</font></th>
	<th background="/images/body_hor.JPG"><font class='txt'>Customer Count</font></th>
	
 
  </tr>
  
<% for i in @employe_accounts %>
  <tr class="<%= cycle('odd', 'even') -%>">
  
    <td><%=i.employe_id %></td>
	<td><%=i.employe_name %></td>
	<td><%=i.emp_type %></td>
	<td><%=i.address.gsub("\n", "<br />\n") %></td>
	<td><%=i.e_mail %></td>
	<td><%=i.phone_no %></td>
	<%hmm_reg_count = HmmUser.count(:all, :conditions => "emp_id = #{i.id}")%>
	<%if hmm_reg_count == 0%>
	<td>NIL</td>
	<%else%>
	<td><%=hmm_reg_count %></td>
	<%end%>
	
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @employe_account_pages.current.previous } if @employe_account_pages.current.previous %>
<%= link_to 'Next page', { :page => @employe_account_pages.current.next } if @employe_account_pages.current.next %> 

<br />

