<h1>Listing message_boards</h1>

<table>
  <tr>
  <% for column in MessageBoard.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for message_board in @message_boards %>
  <tr>
  <% for column in MessageBoard.content_columns %>
    <td><%=h message_board.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => message_board %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => message_board %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => message_board }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @message_board_pages.current.previous } if @message_board_pages.current.previous %>
<%= link_to 'Next page', { :page => @message_board_pages.current.next } if @message_board_pages.current.next %> 

<br />

<%= link_to 'New message_board', :action => 'new' %>
